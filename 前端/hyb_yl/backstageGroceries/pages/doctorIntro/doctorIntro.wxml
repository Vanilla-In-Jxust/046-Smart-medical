<swiper circular autoplay="{{true}}" class="banner" duration="400" indicatorActiveColor="#3b4ca9" indicatorColor="#ccc" indicatorDots="true" interval="2500">
    <swiper-item wx:for="{{info.sthumb}}" wx:key="inedx">
        <image class="banner" src="{{item}}"></image>
    </swiper-item>
</swiper>
<view class="money">
    <text class="sign">￥</text>
    <text class="price">{{info.smoney}}</text>
</view>
<view class="money font36">
  {{info.sname}}
</view>
<view class="control">
    <view bindtap="huiIndex" class="function share" style="border-right: 1rpx solid #999;">
        <image mode="aspectFit" src="/assets/images/a1on.png" style="margin-top:10rpx;"></image>
        <text>首页</text>
    </view>
    <button class="function share" openType="share">
        <image mode="aspectFit" src="/hyb_yl/images/fx2.png"></image>
        <text>分享</text>
    </button>
</view>
<view class="information">
    <view bindtap="browseThis" class="choose {{num==1?'color':''}}" id="1">详情</view>
    <view bindtap="browseThis" class="choose {{num==2?'color':''}}" id="2">评价</view>
</view>
<view class="explain" wx:if="{{num==1}}">
    <view class="explainWriting">
        <view class="writing">
      说明：
    </view>
        <view class="writingSpecific">{{info.stext}}</view>
    </view>
    <view class="doctor" style="padding-bottom:10rpx;">
        <view class="doctor-top">
            <view class="doctor-left">服务时间</view>
        </view>
        <view class="form-group" wx:if="true">
            <view class="tab">
                <view class="right">
                    <view class="r_top df">
                        <view class="border df fs28" style="width:{{selectdoctime.length>3?100/selectdoctime.length:50}}%;flex-direction:column" wx:for="{{selectdoctime}}" wx:key="key">
                            <view>{{item.week}}</view>
                            <view>{{item.day}}</view>
                        </view>
                    </view>
                </view>
                <view class="content">
                    <view class="r_top df">
                        <view class="border df fs28 tc jcc" style="width:{{shuju.length>3?100/shuju.length:50}}%;height:100rpx;padding:0" wx:for="{{selectdoctime}}" wx:key="key">
                            <view bindtap="yuyuw_xin" class="yuyue fs24 df wh jcc bsbb p19" data-id="{{tid}}" data-index="{{index}}" wx:if="{{index==item.index&&index>=wg&&item.dian==true}}">点击预约</view>
                            <view class="yuyue fs24 df wh jcc" style="background:#999;" wx:elif="{{index==item.index&&index<wg}}">已过期</view>
                            <view class="yuyue fs24 df wh jcc" style="background:#fff;" wx:else></view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view wx:else>
            <view class="time_no" style="text-align:center;background:#FCFCFC;color:#dcdcdc">
                <image mode="aspectFit" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/no_mess.png?sign=932b1391781a18f11471b3f0e36f6912&t=1584685935" style="width:300rpx;height:200rpx;margin-bottom:20rpx;"></image>
                <view class="fs30">暂无排班</view>
            </view>
        </view>
    </view>
</view>
<view class="explain" wx:if="{{num==2}}">
    <view class="evaluate">
        <view>商品评价</view>
        <navigator url="/hyb_yl/backstageGroceries/pages/dynamic/dynamic">查看更多</navigator>
    </view>
    <view wx:for="{{estimates}}" wx:key="{{ index }}">
        <view class="comment pad_24 public_white">
            <view class="comm_user center">
                <view class="center">
                    <image class="circle" src="{{item.img}}"></image>
                    <text class="comm_person font_si14 font_co999">{{item.phoneMask}}</text>
                    <image class="cimm_start" src="/assets/images/start02.png" wx:for="{{item.star}}" wx:key="{{ index }}"></image>
                </view>
                <text class="font_si14 font_co999">{{item.createTime}}</text>
            </view>
            <text class="comm_content font_si14 font_co333">{{item.estimate}}</text>
        </view>
        <view class="public_line"></view>
    </view>
</view>
<view style="height: 104rpx;"></view>
<view bindtap="close_modal" class="modal" wx:if="{{yuyue_status}}"></view>
<view class="modal_box" wx:if="{{yuyue_status}}">
    <view class="fs30 mb10 df jsb">
        <view>
            <text>{{dangqianriqi}} {{week}}</text>
        </view>
        <view bindtap="close_modal" class="cha color_gray">
            <image src="/hyb_yl/images/close.png"></image>
        </view>
    </view>
    <view class="time_lists df">
        <view bindtap="choose_yy_time" class="t_item fs26 mb10" data-data="{{info.smoney}}" data-id="{{yuyuebf.tid}}" data-index="{{index}}" data-stype="{{info.stype}}" wx:if="{{item.sjstr!=''&&item.shen!=''&&item.cont!=''}}" wx:for="{{star}}" wx:key="lst">
            <view>{{item.sjstr}}</view>
            <view class="fs22">还可约
        <text class="ch">({{item.shen}})</text>人</view>
        </view>
    </view>
</view>
