page {
    background: #fff;
    font-family: "Microsoft YaHei";
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.quick-ask-contain {
    position: relative;
    width: 100%;
    padding-bottom: 25rpx;
    border-bottom: 1rpx solid #F7F7F7;
}

.quick-ask-header {
    display: flex;
    align-items: flex-end;
    width: 100%;
    padding-bottom: 25rpx;
    color: #333;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 40rpx;
}

.dxd-textarea__textarea {
    width: 100%;
    color: #4d4d4d;
    height: 180rpx;
    font-size: 30rpx;
    font-weight: 300;
    line-height: 1.5;
}

.quick-ask-header-dis {
    color: gray;
}

.quick-ask-header-dis text {
    color: #999;
    font-weight: 300;
    font-size: 26rpx;
    line-height: 30rpx;
}

.commonchecked {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.commonchecked view {
    padding: 8rpx 16rpx;
    background: #FAFAFA;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #818181;
    font-weight: 300;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.commonchecked view.active {
    background: #D8F0FF;
    color: #0087E0;
}

.attachment-contain {
    margin-top: 25rpx;
}

.upload-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
    background: #fff;
}

.upload-list-item {
    flex-shrink: 0;
    box-sizing: border-box;
    width: 153rpx;
    height: 153rpx;
    margin-right: 24rpx;
}

.upload-list-add {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #fafafa;
    border-radius: 8rpx;
}

.upload-list-add-image {
    display: block;
    width: 48rpx;
}

.upload-list-add-text {
    margin-top: 12rpx;
    color: #999;
    font-size: 22rpx;
    line-height: 26rpx;
}

.upload-list-desc {
    flex: 1;
    margin-left: 16rpx;
    color: #999;
    font-weight: 300;
    font-size: 26rpx;
    line-height: 28rpx;
}

.common-button {
    width: auto;
    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    background-color: #0087E0;
    color: #fff;
    border: 1rpx solid #0087E0;
    margin: 0;
    border-radius: 47rpx;
    margin-top: 80rpx;
}

.imglist {
    box-sizing: border-box;
    width: 153rpx;
    height: 153rpx;
    margin-right: 24rpx;
    position: relative;
}

.imglist>image:nth-of-type(1) {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: -15rpx;
    right: -15rpx;
}