page {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    min-height: 100vh;
    background: #f3f3f3;
}

view {
    box-sizing: border-box;
}

.title {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    font-size: 36rpx;
    font-weight: bold;
    padding: 0px 24rpx;
}

checkbox-group {
    padding: 0px 24rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background: white;
}

checkbox-group label {
    height: 100rpx;
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 32rpx;
}

checkbox-group .other {
    width: 100%;
    height: 190rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
}

checkbox-group .other textarea {
    background: #f8f8fa;
    box-sizing: border-box;
    padding: 20rpx;
    width: 95%;
    height: 160rpx;
    border: solid 1px #dedee0;
    border-radius: 10rpx;
    font-size: 32rpx;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    height: 34rpx;
    width: 34rpx;
    margin-top: -4rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border-radius: 50%;
    height: 34rpx;
    width: 34rpx;
    line-height: 34rpx;
    margin-top: -4rpx;
    background: #4ca6f2;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 34rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    background: #4ca6f2;
    transform: translate(-50%,-50%) scale(1);
}

.footers {
