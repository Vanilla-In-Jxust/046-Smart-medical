page {
    position: relative;
    background-color: #f2f2f2;
}

.tiwen-bg {
    width: 100%;
    height: 50rpx;
}

.bsbb {
    margin-top: 24rpx;
}

.tab {
    height: 88rpx;
    display: flex;
    justify-content: space-around;
    border-bottom: 1rpx solid #e1e1e1;
    background: #fff;
}

.tab .son {
    width: 15%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}

.tab .active {
    border-bottom: 4rpx solid #0087e0;
}

.nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2;
}

.nav-scr {
    height: 142rpx;
    box-shadow: 1rpx 1rpx 30rpx 0.5rpx #e2e2e2;
}

.ding-btn {
    padding: 10rpx 28rpx;
    border: 1rpx solid #ebebeb;
    font-size: 24rpx;
}

.ding-btn-hover {
    padding: 10rpx 28rpx;
    font-size: 24rpx;
    background: #6EDD99;
    color: #fff;
}

.none {
    width: 100%;
    height: 600rpx;
    line-height: 600rpx;
    box-sizing: border-box;
    padding: 0 18rpx;
    text-align: center;
    margin-top: 50rpx;
}

.none image {
    width: 200rpx;
    height: 200rpx;
}

.bb-tit {
    position: relative;
    color: #666;
    font-size: 30rpx;
    text-indent: 32rpx;
}

.bb-tit::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 6rpx;
    height: 60rpx;
    background: #4882F5;
}

.zf-state {
    padding-right: 32rpx;
    font-size: 26rpx;
    color: #666;
}

.zf-tip-box {
    margin-top: 15rpx;
}

.zf-tip {
    display: inline;
    padding: 3rpx 8rpx;
    color: #4882F5;
    background: #ECF4FF;
    border-radius: 4rpx;
    font-size: 24rpx;
}

.fs-f-b {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 25rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
}

.fs-sta {
    padding: 4rpx;
    font-size: 24rpx;
    color: #4882F5;
    border: 1rpx solid #4882F5;
}