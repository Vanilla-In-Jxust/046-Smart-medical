page {
    background: #fff;
}

.medi-le {
    width: 520rpx;
}

.medical-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1rpx solid rgb(243,243,243);
}

.medi-tit {
    font-size: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.medi-infor {
    margin-top: 16rpx;
    font-size: 26rpx;
    color: #666;
    display: flex;
    align-items: center;
}

.medi-infor view {
    display: inline-block;
    margin-left: 10rpx;
    vertical-align: center;
}

.medi-time {
    color: #666;
}

.medi-pho {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;
    margin-left: 32rpx;
}

.pho-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    vertical-align: center;
}