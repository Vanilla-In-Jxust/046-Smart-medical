page {
    width: 100%;
    height: 100%;
    background-color: white;
    font-family: "Microsoft YaHei";
}

.oval {
    padding: 50rpx 50rpx 20rpx;
}

.signatureBox {
    width: 100%;
    height: 450rpx;
    border: 1rpx solid #eaeaea;
    border-radius: 10rpx;
}

.btnbox {
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btnstyle {
    width: 200rpx;
    color: white;
    font-size: 30rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background: #34c58e;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.selfFont {
    font-size: 30rpx;
    text-align: center;
    color: #ccc;
}

.handCenter {
    width: 610rpx;
    height: 430rpx;
    margin: 10rpx auto;
}

.handWriting {
    background: white;
    width: 100%;
    height: 100%;
}

.show {
    display: block;
}

.hide {
    display: none;
}