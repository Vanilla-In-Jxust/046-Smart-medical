page {
    width: 100%;
    height: 100%;
    background: #f8f8f8;
}

.headImg {
    width: 100%;
    height: 395rpx;
}

.headImg image {
    width: 100%;
    height: 100%;
}

.packcenter {
    width: 702rpx;
    background: white;
    border-radius: 20rpx;
    position: relative;
    margin: -100rpx auto;
    z-index: 1;
}

.packtitle {
    text-align: center;
    margin-top: 26rpx;
    color: #333333;
    font-size: 30rpx;
    margin-bottom: 12rpx;
    padding-top: 10rpx;
}

.packprice {
    color: #5CC9AC;
}

.packeval {
    padding-left: 23rpx;
    padding-right: 23rpx;
    font-size: 26rpx;
    color: #999;
    line-height: 40rpx;
}

.pricebox {
    display: flex;
    font-size: 28rpx;
    padding-top: 20rpx;
}

.can {
    width: 215rpx;
    color: #666666;
    line-height: 50rpx;
}

.inputbox {
    flex: 1;
    padding-right: 20rpx;
    padding-left: 210rpx;
    text-align: center;
}

.inputbox input {
    width: 100%;
    height: 100%;
}

.que {
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    background: #5CC9AC;
    color: white;
}

.dredgebox {
    margin-top: 24rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.dre {
    width: 100%;
    height: 96rpx;
    background: white;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
}

.dre_left {
    color: #666666;
    font-size: 26rpx;
    line-height: 96rpx;
}

.dre_right {
    line-height: 96rpx;
}

.wx-switch-input {
    width: 90rpx!important;
    height: 50rpx!important;
    background: #5CC9AC!important;
    border: #ccc!important;
}

.wx-switch-input::before {
    width: 90rpx!important;
    height: 50rpx!important;
}

.wx-switch-input::after {
    width: 45rpx!important;
    height: 50rpx!important;
}

.foot {
    height: 100rpx;
    margin-top: 100rpx;
}