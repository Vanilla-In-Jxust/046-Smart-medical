page {
    width: 100%;
    height: 100%;
    background-color: #fafcfb;
    font-family: "Microsoft YaHei";
}

.oval {
    padding: 40rpx 40rpx 0rpx;
}

.photoframe {
    width: 100%;
    height: 350rpx;
    border: 1rpx solid #eaeaea;
    border-radius: 10rpx;
    text-align: center;
    font-size: 35rpx;
    color: #a4a4a4;
    line-height: 70rpx;
}

.photobox {
    width: 100%;
    border: 1rpx solid #eaeaea;
    border-radius: 10rpx;
    text-align: center;
    height: 800rpx;
    margin: 0 auto;
}

.photoImg {
    width: 600rpx;
    height: 760rpx;
    margin: 15rpx auto;
}

.photobox image {
    width: 100%;
    height: 100%;
}

.cameraImg {
    width: 90rpx;
    height: 100rpx;
    margin: 50rpx auto 0;
}

.cameraImg image {
    width: 100%;
    height: 100%;
}

.sign {
    width: 550rpx;
    height: 80rpx;
    font-size: 30rpx;
    color: white;
    border-radius: 70rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 100rpx auto 0rpx;
}

.show {
    display: block;
}

.hide {
    display: none;
}