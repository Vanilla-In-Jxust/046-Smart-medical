                    <switch checked bindchange="whether" colo="#5CC9AC"></switch>
                </view>
            </view>
        </view>
        <view class="footbox">
            <view bindtap="addserver" class="add">
                <view class="addImg">
                    <image src="/images/addpack.png"></image>
                </view>
        添加服务包
      </view>
        </view>
    </view>
