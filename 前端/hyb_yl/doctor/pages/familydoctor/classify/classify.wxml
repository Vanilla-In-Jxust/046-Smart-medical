    <view class="oval">
        <view bindtap="packdetail" class="packbox" wx:for="{{classify}}" wx:key="*this">
            <view class="packclass">
                <view class="packname">{{item.title}}</view>
                <view class="packRight">
                    <view class="arrowImg">
                        <image src="/images/packArr.png"></image>
                    </view>
                </view>
            </view>
        </view>
        <view class="dredgebox">
            <view class="dre">
                <view class="dre_left">是否开通服务包</view>
