page {
    width: 100%;
    height: 100%;
    background: #f8f8f8;
}

.head {
    margin-top: 24rpx;
    width: 100%;
    height: 90rpx;
    background: white;
    display: flex;
    font-size: 26rpx;
    align-items: center;
    color: #999;
}

.navbar {
    display: flex;
    width: 100%;
    flex-direction: row;
    line-height: 90rpx;
    margin-top: 24rpx;
}

.navbar .item {
    flex: auto;
    font-size: 28rpx;
    text-align: center;
    background: #fff;
    color: #999;
}

.navbar .item.active {
    color: #3b4ca9;
    position: relative;
}

.navbar .item.active::after {
    content: "";
    display: block;
    position: absolute;
    height: 4rpx;
    width: 75rpx;
    bottom: 0;
    left: 151rpx;
    background: #3b4ca9;
}

.severpack {
    display: flex;
    flex-wrap: wrap;
}

.serverlist {
    width: 50%;
    margin-top: 24rpx;
}

.packbox {
    width: 342rpx;
    height: 142rpx;
    margin: 0 auto;
    background: #fff;
    border-radius: 20rpx;
    padding-left: 13rpx;
    display: flex;
    padding-top: 14rpx;
}

.packImg {
    width: 120rpx;
    height: 120rpx;
    background: red;
    border-radius: 20rpx;
    margin-right: 24rpx;
}

.packImg image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.packinfo {
    flex: 1;
    padding-right: 20rpx;
}

.packname {
    font-size: 28rpx;
    color: #666666;
    padding-top: 10rpx;
}

.lookdetail {
    font-size: 22rpx;
    color: #3b4ca9;
    text-align: right;
    padding-top: 55rpx;
}

.footbox {
    width: 100%;
    position: fixed;
    bottom: 24rpx;
}

.add {
    width: 700rpx;
    background: #3b4ca9;
    height: 96rpx;
    border-radius: 20rpx;
    margin: 0 auto;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}

.addImg {
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    margin-right: 19rpx;
}

.addImg image {
    width: 100%;
    height: 100%;
}