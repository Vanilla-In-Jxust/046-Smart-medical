page {
    background: #fff;
    font-family: "Microsoft YaHei";
}

view {
    box-sizing: border-box;
}

.editor {
    padding: 0 25rpx;
}

.quick-ask-contain {
    border-bottom: 1rpx solid #F7F7F7;
}

.quick-ask-header {
    padding: 40rpx 0 25rpx;
    color: #333;
    font-size: 36rpx;
}

.quick-ask-contain textarea {
    width: 100%;
    color: #4d4d4d;
    caret-color: #0088DE;
    line-height: 1.5;
    height: 150rpx;
}

.quicktime {
    font-size: 32rpx;
    color: #737373;
    margin-bottom: 25rpx;
    position: relative;
}

.quicktime::after {
    position: absolute;
    top: 30%;
    right: 0;
    width: 14rpx;
    height: 14rpx;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
    border-color: #979797;
    transform: rotate(45deg);
    content: " ";
}

.hintmes {
    font-size: 24rpx;
    color: #A7A7A7;
    margin-bottom: 30rpx;
}

.attachment-contain {
    padding-top: 30rpx;
}

.upload-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
    background: #fff;
}

.upload-list-item {
    flex-shrink: 0;
    box-sizing: border-box;
    width: 153rpx;
    height: 153rpx;
    margin-right: 24rpx;
}

.upload-list-add {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #fafafa;
    border-radius: 8rpx;
}

.upload-list-add-image {
    display: block;
    width: 48rpx;
}

.upload-list-add-text {
    margin-top: 12rpx;
    color: #999;
    font-size: 22rpx;
    line-height: 26rpx;
}

.upload-list-desc {
    flex: 1;
    margin-left: 16rpx;
    color: #999;
    font-weight: 300;
    font-size: 26rpx;
    line-height: 28rpx;
}

.imglist {
    box-sizing: border-box;
    width: 153rpx;
    height: 153rpx;
    margin-right: 24rpx;
    position: relative;
}

.imglist>image:nth-of-type(1) {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: -15rpx;
    right: -15rpx;
}

.btnbox {
    padding: 25rpx;
}

.common-button {
    width: auto;
    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    background-color: #0087E0;
    color: #fff;
    border: 1rpx solid #0087E0;
    margin: 0;
    border-radius: 47rpx;
    margin-top: 80rpx;
}