page {
    background: #fff;
    font-family: "Microsoft YaHei";
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.step-container {
    margin-right: 20rpx;
}

.step-container:last-child {
    margin-right: 0;
}

.step-number,.step-number .step-container {
    display: flex;
    align-items: center;
}

.step-number {
    padding: 24rpx 30rpx;
    background: #fff;
    border-bottom: 25rpx solid #FAFAFA;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
}

.flexd {
    position: fixed;
    top: 98rpx;
    left: 0;
    z-index: 100;
}

.step-number .number {
    width: 28rpx;
    height: 28rpx;
    color: #fff;
    font-weight: 600;
    font-size: 22rpx;
    line-height: 28rpx;
    text-align: center;
    background-color: #ccc;
    border-radius: 50%;
}

.step-number .highlight .number {
    background-color: #0087E0;
}

.step-number .content {
    display: flex;
    align-items: center;
    height: 28rpx;
    margin-left: 8rpx;
    color: #ccc;
    font-size: 24rpx;
    line-height: 28rpx;
}

.step-number .highlight .content {
    color: #0087E0;
    font-weight: 500;
}

.step-number .arrow:after {
    display: block;
    width: 14rpx;
    height: 14rpx;
    margin-left: 8rpx;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
    transform: rotate(45deg);
    content: " ";
}

.containerbox {
    width: 100%;
    padding: 25rpx;
    z-index: 1;
    background: #fff;
}

.searchbox {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    border: 1rpx solid #EDEDED;
    border-radius: 50rpx;
    padding: 18rpx 25rpx;
}

.searchbox image {
    width: 44rpx;
    height: 44rpx;
}

.searchbox input {
    font-size: 30rpx;
    padding-left: 16rpx;
    box-sizing: border-box;
    border: 0;
    flex: 1;
    text-align: left;
    caret-color: #0088DE;
    color: #333;
}

.drupitem {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F7F7F7;
    justify-content: space-between;
}

.header {
    position: relative;
    width: 170rpx;
    height: 170rpx;
    border: 1rpx solid #ebebeb;
    border-radius: 4rpx;
    overflow: hidden;
}

.drug-category {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 12rpx 0;
    color: #fff;
    font-size: 28rpx;
    line-height: 32rpx;
    text-align: center;
    background-color: rgba(0,0,0,.6);
}

.drug-item-body {
    position: relative;
    width: 72%;
    margin-left: 20rpx;
}

.drupname {
    color: #333;
    font-weight: 500;
    font-size: 32rpx;
    position: relative;
}

.packing {
    color: #333;
    font-size: 26rpx;
    line-height: 30rpx;
}

.manufacturer {
    max-height: 52rpx;
    margin-top: 8rpx;
    color: #999;
    font-size: 22rpx;
    line-height: 26rpx;
    display: -webkit-box;
    overflow: hidden;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.price {
    display: flex;
    align-items: center;
    width: 100%;
    margin: 6rpx 0 0 -6rpx;
}

.detail {
    flex: 1;
    color: #E83333;
    font-weight: 500;
    font-size: 30rpx;
    line-height: 34rpx;
}

.count-add {
    height: 54rpx;
    padding: 0 24rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 54rpx;
    background-color: #0087E0;
    border-radius: 4rpx;
}

.show-all-contain {
    display: flex;
    align-items: center;
    height: 54rpx;
}

.drug-item-body .price-image {
    display: block;
    width: 48rpx;
    height: 48rpx;
}

.show-all-contain-text {
    color: #333;
    font-size: 30rpx;
    line-height: 34rpx;
    padding: 0 20rpx;
}

.bottom-container {
    position: fixed;
    bottom: 0;
    z-index: 100;
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    width: 100%;
    padding: 15rpx 25rpx;
}

.image-contain {
    position: relative;
    width: 80rpx;
    height: 80rpx;
    margin-right: 25rpx;
    background-color: #b3b3b3;
    border-radius: 100rpx;
}

.image-contain-selected {
    background-color: #0087E0;
}

.image-contain image {
    display: block;
    width: 52rpx;
    height: 52rpx;
    padding: 15rpx;
}

.image-contain .tips {
    position: absolute;
    top: 0;
    right: -16rpx;
    width: 32rpx;
    height: 32rpx;
    padding-top: 2rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 28rpx;
    text-align: center;
    background-color: #ff5b4d;
    border-radius: 100rpx;
}

.select-number {
    flex: 1;
    color: #666;
    font-size: 32rpx;
    line-height: 36rpx;
}

.next {
    padding: 29rpx 60rpx;
    color: #fff;
    font-size: 32rpx;
    line-height: 30rpx;
    background-color: #0087E0;
    border-radius: 50rpx;
}

.gray {
    background: #b3b3b3;
}

.drupdetails {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 50000;
}

.empty {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
}

.detailsbox {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 202;
    max-height: 100%;
    transform: translateY(100%);
    transition: .3s;
    background: #fff;
}

.popactived {
    transform: translateY(0);
}

.popup-hd {
    position: relative;
    box-sizing: border-box;
    height: 105rpx;
    line-height: 105rpx;
    text-align: center;
    background-color: #fcfcfc;
    border-bottom: 1rpx solid #ebebeb;
    color: #999;
    font-size: 32rpx;
}

.popup-close {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    padding: 0 30rpx;
    font-size: 50rpx;
    color: #A6A6A6;
}

.popup-bd {
    padding: 25rpx;
}

.popup-bd .drupitem {
    border-bottom: 0;
}

.copyrightbox {
    width: 100%;
    padding: 25rpx 0;
    display: flex;
    align-items: center;
    background: #fff;
}

.copyrightitem {
    display: inline-flex;
    align-items: center;
    font-size: 26rpx;
    color: #B6B6B6;
    margin-right: 20rpx;
}

.copyrightitem image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 5rpx;
}

.inventory-contain {
    height: 486rpx;
    padding-bottom: 30rpx;
    overflow-y: scroll;
}

.inventory-item:not(:first-child) {
    margin-top: 24rpx;
}

.inventory-item .title {
    color: #b3b3b3;
    font-size: 30rpx;
}

.inventory-item .field {
    margin-top: 12rpx;
    color: #666;
    font-size: 30rpx;
    line-height: 45rpx;
}

.prescription-contain {
    padding: 20rpx 30rpx;
    color: #ff5b4d;
    font-size: 24rpx;
    line-height: 28rpx;
}

.drug-select-contain {
    max-height: 800rpx;
    overflow-y: auto;
    padding: 25rpx;
}

.drupname image {
    position: absolute;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 45rpx;
}