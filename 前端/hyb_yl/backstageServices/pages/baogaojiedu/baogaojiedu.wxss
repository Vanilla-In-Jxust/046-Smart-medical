page {
    background: #fff;
    font-family: "Microsoft YaHei";
}

view {
    box-sizing: border-box;
}

.containers {
    padding: 25rpx 25rpx 0;
}

.groupitem-tit {
    font-size: 35rpx;
    color: #333333;
    margin-bottom: 20rpx;
}

.steps {
    width: 100%;
    border-radius: 10rpx;
    background: #FAFAFA;
    padding: 0 25rpx;
}

.stepspay {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #F4F4F4;
}

.stepspay view {
    width: 100%;
    display: inline-flex;
    align-items: center;
    font-size: 30rpx;
    color: #888888;
    margin-top: 25rpx;
}

.stepspay>view:first-child {
    margin-top: 0;
}

.stepspay view>text:first-child {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    background: #999999;
    color: #EAEAEA;
    text-align: center;
    line-height: 36rpx;
    border-radius: 50%;
    margin-right: 10rpx;
    position: relative;
}

.stepspay view>text:first-child::after {
    content: "";
    border-left: 1rpx dashed #C1C1C1;
    height: 100%;
    position: absolute;
    bottom: -25rpx;
    left: 50%;
}

.xieyihint {
    padding: 25rpx 0;
}

.xieyihint view {
    font-size: 26rpx;
    color: #999999;
    margin-bottom: 15rpx;
    padding-left: 20rpx;
    position: relative;
}

.xieyihint view::after {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #D9D9D9;
    position: absolute;
    border-radius: 50%;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.stepspay view:last-child>text:first-child::after {
    border: none;
}

.myorder {
    width: 100%;
    border-radius: 10rpx;
    background: #FAFAFA;
    padding: 25rpx;
    margin-top: 35rpx;
    margin-bottom: 55rpx;
    display: inline-flex;
    align-items: center;
    font-size: 30rpx;
    color: #404040;
    position: relative;
}

.myorder::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 1rpx solid #AFAFAF;
    border-right: 1rpx solid #AFAFAF;
    position: absolute;
    top: 50%;
    right: 20rpx;
    transform: translateY(-50%) rotate(45deg);
}

.myorder image {
    width: 55rpx;
    height: 55rpx;
    margin-right: 15rpx;
}

.btnitem {
    width: 100%;
    line-height: 90rpx;
    background: #0087E1;
    border-radius: 50rpx;
    text-align: center;
    font-size: 30rpx;
    margin-top: 35rpx;
    color: #fff;
    position: relative;
}

.btnitem text {
    line-height: 30rpx;
    padding: 2rpx 8rpx;
    background: #FBB83F;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    top: 0;
    right: -5rpx;
    border-radius: 18rpx;
    border-bottom-left-radius: 0;
}

.posfix {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background: white;
}

.posfix view {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.posfix view image,.posfix button image {
    width: 50rpx;
    height: 50rpx;
}

.posfix view text,.posfix button text {
    font-size: 24rpx;
    color: #333;
}

.posfix button {
    margin: 0px;
    background: transparent;
    border: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

button::after {
    border: none;
}