page {
    background: #fff;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.search {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 32rpx;
    background-color: #fff;
}

.search-bar {
    width: 100%;
}

.search-bar-container {
    flex: 1;
    display: flex;
    height: 72rpx;
    overflow: hidden;
    border-radius: 44rpx;
    position: relative;
    border: 1rpx solid #bbb;
    padding: 0 20rpx;
}

.search-bar-confirm {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 72rpx;
    line-height: 72rpx;
    flex-grow: 0;
    padding-left: 20rpx;
    border-radius: 0;
    padding: 0;
    margin: 0;
    font-size: 30rpx;
    border: 0;
    background-color: transparent;
    color: #fff;
}

.search-bar-confirm::after {
    border: none;
}

.search-bar-confirm .image {
    width: 44rpx;
    height: 44rpx;
}

.search-bar-input {
    font-size: 30rpx;
    padding-left: 16rpx;
    height: 72rpx;
    line-height: 72rpx;
    box-sizing: border-box;
    border: 0;
    flex: 1;
    text-align: left;
    caret-color: #00c792;
    color: #333;
}

.disease-info-list {
    margin-bottom: 120rpx;
    margin-top: 125rpx;
}

.main-cards {
    display: flex;
    margin-top: 20rpx;
    padding: 0 32rpx;
}

.main-cards .left-card {
    position: relative;
    width: 329rpx;
    height: 308rpx;
    margin-right: 28rpx;
    overflow: hidden;
    border-radius: 20rpx;
}

.main-cards .right-card {
    display: flex;
    flex-flow: column nowrap;
}

.main-cards .right-card .card {
    position: relative;
    width: 329rpx;
    height: 140rpx;
    overflow: hidden;
    border-radius: 20rpx;
}

.main-cards .right-card .third-card {
    margin-top: 28rpx;
}

.secondary-cards {
    display: flex;
    flex-flow: row wrap;
    padding: 80rpx 32rpx 40rpx;
}

.secondary-cards-card {
    position: relative;
    width: 210rpx;
    height: 140rpx;
    overflow: hidden;
    border-radius: 8rpx;
}

.secondary-cards-card:not(:nth-child(3n)) {
    margin-right: 28rpx;
}

.content-card {
    display: flex;
    justify-content: space-between;
    margin: 40rpx 32rpx 0rpx;
    padding: 40rpx 28rpx;
    background-color: #fafafa;
    border-radius: 8rpx;
}

.content-card-left {
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    margin-right: 40rpx;
}

.content-card-left .content,.content-card-left .title {
    display: -webkit-box;
    overflow: hidden;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.content-card-left .title {
    margin-top: 4rpx;
    color: #333;
    font-weight: 600;
    font-size: 40rpx;
    line-height: 50rpx;
}

.content-card-left .content {
    margin-top: 8rpx;
    color: #4d4d4d;
    font-weight: 300;
    font-size: 26rpx;
    line-height: 36rpx;
}

.content-card-image {
    width: 210rpx;
    height: 160rpx;
    overflow: hidden;
    border-radius: 8rpx;
}

.searchbox {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    background: #fff;
    padding: 0 25rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    padding-top: 50px;
}

.searchlist {
    padding: 50rpx 0;
    border-bottom: 1rpx solid #EBEBEB;
}

.searchtit {
    font-size: 32rpx;
    color: #7B7B7B;
}

.searchtextlist {
    padding: 30rpx 0;
}

.searchtextlist view {
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #7B7B7B;
    line-height: 36rpx;
    position: relative;
}

.searchtextlist view::after {
    content: "";
    width: 5rpx;
    height: 5rpx;
    background: #7B7B7B;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.searchicon {
    width: 100%;
    display: inline-flex;
    align-items: center;
    font-size: 22rpx;
    color: #999999;
}

.searchicon text {
    background: #F4F4F4;
    padding: 2rpx 3rpx;
}