page {
    background: #fff;
    box-sizing: border-box;
    padding-bottom: 150rpx;
}

view {
    box-sizing: border-box;
}

.module-margin {
    margin-bottom: 28rpx;
}

.module-margin image {
    display: block;
    width: 100%;
}

.module-title {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 38rpx;
    padding: 60rpx 0 40rpx;
    color: #333;
    font-weight: 500;
    font-size: 34rpx;
    line-height: 38rpx;
    letter-spacing: 2rpx;
}

.module-title-icon {
    position: relative;
}

.module-title-icon:after {
    position: absolute;
    top: 50%;
    right: -56rpx;
    width: 24rpx;
    height: 3rpx;
    background-color: #00c792;
    transform: translateY(-50%);
    content: "";
}

.module-title-icon:first-child:after {
    left: -56rpx;
}

.module-text {
    margin: 0 30rpx 40rpx;
    padding: 20rpx 30rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 1.5;
    letter-spacing: 2rpx;
    background-color: #fafafa;
    border-radius: 8rpx;
}

.module-entry {
    margin: 0 32rpx;
    padding: 40rpx 0;
    color: #333;
    font-size: 34rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.module-entry .entry {
    display: -webkit-box;
    overflow: hidden;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    height: 38rpx;
    line-height: 38rpx;
}

.mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    z-index: 100;
    left: 0px;
    top: 0px;
    background: rgba(0,0,0,0.5);
}

.mask .mask_sign {
    width: 90%;
    height: 1050rpx;
    position: absolute;
    left: 50%;
    margin-top: 150rpx;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
}

.mask .mask_sign>image {
    width: 100%;
    margin-top: 30rpx;
}

.mask .mask_sign button {
    width: 350rpx;
    height: 90rpx;
    background: #02cb97;
    color: white;
    display: flex;
    align-items: center;
    padding: 0px 70rpx;
    margin-top: 30rpx;
}

.mask .mask_sign button image {
    width: 40rpx;
    height: 40rpx;
}

.mask .mask_sign>text {
    color: white;
    text-align: center;
    font-size: 30rpx;
    margin-top: 50rpx;
}

.posfix {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background: white;
}

.posfix view {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.posfix view image {
    width: 50rpx;
    height: 50rpx;
}

.posfix view text {
    font-size: 24rpx;
    color: #333;
}

.posfix button {
    margin: 0px;
    background: transparent;
    border: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.posfix button image {
    width: 50rpx;
    height: 50rpx;
}

.posfix button text {
    font-size: 24rpx;
    color: #333;
}