page {
    background: #fff;
    box-sizing: border-box;
    padding-bottom: 150rpx;
}

view {
    box-sizing: border-box;
}

.tabs {
    width: 100%;
    background: #fff;
    padding: 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.scroll-view {
    white-space: nowrap;
    height: 112rpx;
    width: 100%;
}

.scroll-view view {
    display: inline-block;
    padding: 0 30rpx;
}

.scroll-view view text {
    line-height: 100rpx;
    position: relative;
    display: inline-block;
    color: #333;
    font-size: 28rpx;
}

.scroll-view view text.actives {
    color: #00c792;
}

.scroll-view view text.actives::after {
    content: "";
    width: 100%;
    height: 5rpx;
    background: #00c792;
    position: absolute;
    bottom: 0;
    left: 0;
}

.trust-review {
    display: flex;
    align-items: center;
    padding: 40rpx 32rpx;
    margin-top: 130rpx;
}

.trust-review-image {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin-right: 8rpx;
}

.trust-review-content {
    flex: 1;
    height: 32rpx;
    color: #b38c3e;
    font-size: 24rpx;
    line-height: 32rpx;
}

.scrollbox {
    width: 100%;
    position: relative;
}

.customer {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    display: inline-flex;
    align-items: center;
    font-size: 30rpx;
    color: #00c792;
}

.customer image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.contentlist {
    margin-bottom: 100rpx;
    padding: 0 32rpx;
}

.tab-title {
    margin-bottom: 80rpx;
    color: #333;
    font-weight: 600;
    font-size: 60rpx;
    line-height: 90rpx;
}

.tab-text {
    color: #333;
    font-weight: 300;
    font-size: 36rpx;
    line-height: 64rpx;
    word-break: break-all;
}