page {
    background: #ffffff;
}

.padding {
    padding: 10rpx 30rpx;
    box-sizing: border-box;
}

.department {
    display: flex;
    justify-content: space-between;
}

.name {
    font-size: 36rpx;
    line-height: 80rpx;
    font-weight: bold;
}

.people {
    font-size: 28rpx;
    line-height: 80rpx;
    color: #999;
}

.number {
    font-size: 28rpx;
    color: red;
}

.specialEffect {
    background: linear-gradient(to right,#91b5ff,#939afe);
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    width: 46%;
}

.nameSize {
    font-size: 30rpx;
    padding-bottom: 28rpx;
    box-sizing: border-box;
    color: #ffffff;
}

.fontSize {
    font-size: 26rpx;
    text-align: right;
    color: #ffffff;
}

.introduce {
    padding: 20rpx 0;
    box-sizing: border-box;
}

.content {
    font-size: 30rpx;
    line-height: 42rpx;
    color: #999;
}

.flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.information {
    width: 400rpx;
    padding: 20rpx;
    padding-left: none;
    box-sizing: border-box;
    margin-right: 20rpx;
}

.posi {
    position: relative;
}

.imgSize {
    width: 180rpx;
    height: 180rpx;
    border-radius: 180rpx;
}

.whether {
    width: 110rpx;
    line-height: 38rpx;
    font-size: 20rpx;
    background: #ff9d00!important;
    color: #ffffff;
    border-radius: 10rpx;
    text-align: center;
    position: absolute;
    left: 36rpx;
    bottom: 0;
}

.nameFont {
    font-size: 38rpx;
    line-height: 70rpx;
}

.fontBrief {
    font-size: 30rpx;
    line-height: 48rpx;
    color: #999;
}

.scroll {
    width: 3520rpx;
    display: flex;
    flex-wrap: wrap;
}