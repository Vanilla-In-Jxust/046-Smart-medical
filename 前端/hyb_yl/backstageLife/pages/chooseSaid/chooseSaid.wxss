::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

page {
    background-color: #f2f3f7;
}

.top_view {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    background-color: #f2f3f7;
}

.search_patient {
    height: 114rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 10000;
}

.search_bottom {
    position: relative;
    z-index: 10000;
    height: 20rpx;
    background-color: #f2f3f7;
}

.search_view {
    height: 60rpx;
    width: 690rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    background-color: #f5f5f5;
}

.serach_img {
    height: 40rpx;
    width: 40rpx;
    margin: 0 25rpx;
}

.input {
    flex: 1;
}

.input {
    flex: 1;
    height: 100%;
    color: #333;
    font-size: 28rpx;
}

.choosetype {
    background-color: #fff;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 32rpx;
    color: #333;
    position: relative;
    z-index: 10000;
}

.choosetype_item {
    position: relative;
    line-height: 88rpx;
    box-sizing: border-box;
}

.active_line {
    position: absolute;
    bottom: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 2rpx;
    width: 134rpx;
    background-image: linear-gradient(to right,#69f,#3b4ca9);
}

.classify_view {
    background-color: #fff;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
    padding-right: 100rpx;
}

.classify_scroll {
    height: 80rpx;
    white-space: nowrap;
}

.classify_view_item {
    height: 80rpx;
    padding: 0 30rpx;
    display: inline-block;
    line-height: 80rpx;
}

.scroll_view {
    max-height: 90vh;
    background-color: #fff;
}

.classify_list {
    height: 216rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #f0f0f0;
    margin: 0 30rpx;
    box-sizing: border-box;
}

.classify_list_left {
    flex: 1;
}

.classify_list_left_top {
    height: 100rpx;
}

.classify_list_left_bottom {
    margin-top: 14rpx;
}

.classify_list_img_view {
    margin-left: 40rpx;
    position: relative;
}

.classify_list_img_view_absolute {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
}

.vd_img {
    width: 70rpx;
    height: 70rpx;
}

.classify_list_img {
    width: 208rpx;
    height: 156rpx;
    border-radius: 16rpx;
}

.classify_list_time {
    display: inline-block;
    margin: 0 20rpx;
}

.up_view {
    position: absolute;
    right: 0;
    top: 0;
    height: 80rpx;
    background: linear-gradient(to right,rgba(255,255,255,0),white 50%,white);
    display: flex;
    align-items: center;
    padding-left: 100rpx;
    padding-right: 30rpx;
}

.up_img {
    height: 40rpx;
    width: 40rpx;
}

.sort {
    background-color: #fff;
    position: absolute;
    left: 0;
    top: 0;
    padding-top: 30rpx;
    z-index: 100;
    width: 100%;
    box-sizing: border-box;
    display: none;
}

.short_down {
    display: block;
    animation: slidown 0.2s ease-in both;
}

.short_up {
    display: none;
    animation: slidown 0.2s ease-in both;
}

@-webkit-keyframes slidup {
    from {
        transform: translateY(0%);
    }

    to {
        transform: translateY(-100%);
    }
}

@keyframes slidup {
    from {
        transform: translateY(0%);
    }

    to {
        transform: translateY(-100%);
    }
}

@-webkit-keyframes slidown {
    from {
        transform: translateY(-100%);
    }

    to {
        transform: translateY(0);
    }
}

@keyframes slidown {
    from {
        transform: translateY(-100%);
    }

    to {
        transform: translateY(0);
    }
}

.sort_top_view {
    height: 80rpx;
    background: linear-gradient(to right,rgba(255,255,255,0),white 50%,white);
    display: flex;
    align-items: center;
    padding-left: 100rpx;
    padding-right: 30rpx;
}

.sort_top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    padding-left: 30rpx;
}

.sort_bottom {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.mask_view {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 99;
    top: 0;
    left: 0;
}