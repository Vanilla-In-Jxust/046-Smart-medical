page {
    background: #fff;
    padding-bottom: 120rpx;
}

view {
    box-sizing: border-box;
}

.dabj {
    width: 100%;
    height: 440rpx;
}

.selclass {
    border-bottom: 25rpx solid #F1F1F1;
}

.titles {
    padding: 25rpx;
    font-size: 30rpx;
    color: #9D9D9D;
}

.keshilist {
    padding: 0 8rpx 25rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.keshiitem {
    width: 24%;
    border: 1rpx solid transparent;
    border-radius: 10rpx;
    text-align: center;
    padding: 15rpx 0 25rpx;
}

.kstit {
    font-size: 28rpx;
    color: #969696;
    position: relative;
}

.kstit image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 5rpx;
    left: 10rpx;
}

.keshiimg {
    width: 70rpx;
    height: 70rpx;
}

.times {
    padding: 25rpx;
    font-size: 28rpx;
    color: #A9A9A9;
    background: #FCFCFC;
    border-top: 1rpx solid #F6F6F6;
}

view.active {
    border: 1rpx solid #309EE6;
}

view.active .kstit {
    color: #0088DE;
}

.pingjiabox {
    padding: 0 25rpx;
}

.pjuser {
    display: inline-flex;
    align-items: center;
    font-size: 28rpx;
    padding-bottom: 20rpx;
}

.pjuser text:first-child {
    color: #898989;
}

.pjuser text:last-child {
    color: #DE7448;
    margin-left: 25rpx;
}

.pjcontent {
    font-size: 32rpx;
    color: #3C3C3C;
    line-height: 45rpx;
    text-align: justify;
}

.btns {
    width: 100%;
    padding: 28rpx;
    background: #0088DE;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
}