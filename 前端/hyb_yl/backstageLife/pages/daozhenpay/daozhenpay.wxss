view {
    box-sizing: border-box;
}

page {
    box-sizing: border-box;
    background: #fff;
}

.elsemess {
    padding: 0 25rpx;
}

.servepackage {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #F9F9F9;
}

.servepackage image {
    width: 85rpx;
    height: 85rpx;
    border-radius: 10rpx;
}

.servepackageinfo {
    width: 85%;
}

.info-top {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.info-top view:first-child {
    color: #454545;
    font-size: 32rpx;
}

.info-top view:first-child text:first-child {
    overflow: hidden;
    color: #333;
    font-weight: 500;
    font-size: 34rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info-top view:first-child text:last-child {
    margin: 0 12rpx;
    overflow: hidden;
    color: #333;
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info-top view:last-child {
    color: #0087E0;
    font-size: 34rpx;
}

.info-bott {
    color: #333;
    font-weight: 300;
    font-size: 28rpx;
    line-height: 40rpx;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    height: 36rpx;
    overflow-y: hidden;
}

.tag {
    padding: 4rpx;
    color: #fa0;
    font-size: 24rpx;
    line-height: 28rpx;
    background-color: #fffaf0;
    margin-bottom: 12rpx;
    font-weight: 400;
    white-space: nowrap;
    border-radius: 4rpx;
}

.elsegroup {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #525252;
    font-size: 32rpx;
    border-bottom: 1rpx solid #F9F9F9;
    padding: 30rpx 0;
    flex-wrap: wrap;
}

.elsegroup view:last-child {
    color: #333;
    font-weight: 300;
    font-size: 28rpx;
}

.footpay {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.radios {
    font-size: 32rpx;
    color: #7F7F7F;
    text-align: left;
    margin-bottom: 25rpx;
    padding: 50rpx 0;
}

.radios radio {
    transform: scale(0.8);
    margin-left: -25rpx;
}

.payandtotal {
    padding: 15rpx 25rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1rpx solid #F9F9F9;
}

.payandtotal view.jihui {
    font-size: 26rpx;
    color: #989898;
}

.payandtotal view:first-child view text:first-child {
    font-size: 26rpx;
    color: #989898;
}

.payandtotal view:first-child view text:last-child {
    font-size: 32rpx;
    color: #0087E0;
}

.payandtotal>view:last-child {
    width: 55%;
    text-align: center;
    line-height: 85rpx;
    font-size: 30rpx;
    color: #fff;
    background: #0087E0;
    border-radius: 50rpx;
}