<view class="com_seetBox">
    <view class="com_seetBox1">
        <image class="com_seetimg" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/wzseet.png?sign=9967d7978060f40e4825383f0abbd695&t=1592017618"></image>
        <input bindinput="input" class="com_input" placeholder="关键词"></input>
    </view>
</view>
<view style="  width: 100%; height: 114rpx;"></view>
<scroll-view bindscrolltolower="lower" scrollY="true" style="max-height:{{height}}px">
    <view class="list" wx:for="{{arr}}" wx:key="{{ index }}">
        <view class="list1">
            <view bindtap="particulars" class="list_headline" data-id="{{item.eduId}}">
                <view class="list_headline_text">{{item.title?item.title:''}}</view>
                <view class="name_time">{{item.releaseDayTime}} {{item.nmType?item.nmType:''}}</view>
                <view class="like_box">
                    <view class="like">
                        <image class="list_img" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/yanjing.png?sign=cce6a051e676060ce9a81b655a0a724a&t=1592017648"></image>
                        <view class="list_img_text">{{item.pageView}}</view>
                    </view>
                    <view class="like">
                        <image class="list_img" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/wzzan.png?sign=5dd60f134fc33122dc29b7a308c790f1&t=1592017658"></image>
                        <view class="list_img_text">{{item.praiseNum}}</view>
                    </view>
                    <view class="like">
                        <image class="list_img" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/wzzuan.png?sign=1f30b2117ae0426a6e2c0d886cc2921b&t=1592017669"></image>
                        <view class="list_img_text">{{item.shareNum}}</view>
                    </view>
                </view>
            </view>
            <view class="list_headline_boximg">
                <view class="headline_view list_headline_boximg1 ">
                    <image bindtap="particulars" class="list_headline_boximg1" data-id="{{item.eduId}}" src="{{item.coverImg}}"></image>
                    <view bindtap="particulars" class="list_headline_boximg1 headline_view_absolute" data-id="{{item.eduId}}" wx:if="{{item.eduType==2}}">
                        <image class="headline_view_absolute_img" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/vd.png?sign=dde4c113350f0e5b8ad8a9375d918d2b&t=1592017694"></image>
                    </view>
                </view>
                <view bindtap="share" class="share" data-index="{{index}}">
                    <image class="share_masturbation" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/masturbation.png?sign=9f8c7e7f023505eadecee43ba72d8628&t=1592017683"></image>
                </view>
            </view>
        </view>
    </view>
    <view class="wx_c" wx:if="{{wzshow}}">未找到相关信息~</view>
    <view class="font_co999 font_si14 more_text public_white" style="width: 100%;" wx:if="{{noFlag}}">已到底部</view>
</scroll-view>
