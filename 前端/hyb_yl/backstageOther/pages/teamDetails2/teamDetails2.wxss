page {
    background: #f5f5f7;
}

.box {
    width: 100%;
    height: 500rpx;
    background: #fff;
    margin-top: 20rpx;
    padding-top: 50rpx;
    padding-bottom: 50rpx;
}

.input {
    display: block;
    width: 100%;
    color: #333;
    height: 500rpx;
    font-size: 32rpx;
    float: left;
    margin-left: 30rpx;
}

.foot {
    width: 90%;
    height: 80rpx;
    margin: 40rpx auto;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    border-radius: 80rpx;
    background: linear-gradient(to right,#6699ff,#3b4ac9);
}