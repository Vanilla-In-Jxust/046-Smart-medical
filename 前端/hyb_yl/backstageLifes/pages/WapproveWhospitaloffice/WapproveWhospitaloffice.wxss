page {
    background: #f0f0f0;
}

.w {
    width: 100%;
    height: 20rpx;
}

.w_box {
    width: 100%;
    height: 100rpx;
    background: #fff;
    line-height: 100rpx;
    text-indent: 30rpx;
    color: #333;
    font-size: 32rpx;
    border-bottom: 1rpx #f0f0f0 solid;
}

page {
    height: 100%;
}

.box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
}

.box_left {
    width: 25%;
    height: 100%;
    background: #fff;
    color: #333;
    box-shadow: 0 0 10rpx rgba(177,177,177,0.6);
    z-index: 9;
    overflow: hidden;
    overflow-y: auto;
}

.box_left view {
    padding: 20rpx;
    white-space: nowrap;
    border-bottom: 2rpx solid #eaeaea;
}

.scroll {
    height: 100%;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    overflow-y: auto;
}

.title {
    font-weight: bold;
    font-size: 32rpx;
    padding: 20rpx 0;
}

.cont_text {
    font-size: 28rpx;
    color: #999;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eaeaea;
}

.active {
    background: #f0f0f0;
    color: #999;
}

.swiper {
    width: 100%;
    height: 100%;
}