page {
    padding-bottom: 110rpx;
    background-color: white;
}

.my-content {
    padding: 0 30rpx;
}

.header-bg {
    width: 132rpx;
    height: 132rpx;
}

.header-bgbox {
    width: 132rpx;
    height: 132rpx;
    border-radius: 50%;
    overflow: hidden;
}

.usernames {
    font-size: 36rpx;
}

.my-infor {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 0;
}

.my-pho {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.my-infor-le {
    font-size: 40rpx;
    color: #333;
}

.my-infor-xx {
    display: flex;
    margin-top: 25rpx;
    font-size: 30rpx;
}

.my-infor-xx view {
    width: 55rpx;
}

.my-user-list {
    display: flex;
    justify-content: space-between;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    color: #333;
}

.my-list-tip {
    margin-top: 18rpx;
    font-size: 24rpx;
    color: #999;
}

.bindtel {
    position: relative;
    width: 100%;
    height: 150rpx;
    margin-top: 20rpx;
}

.bindtel-bg {
    width: 100%;
    height: 100%;
}

.bindtel-con {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    top: 20rpx;
    width: 630rpx;
    padding: 0 30rpx;
}

.bindtel-cle {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #fff;
}

.bindtel-cle image {
    width: 42rpx;
    height: 42rpx;
    margin-right: 10rpx;
}

.bindtel-btn {
    padding: 10rpx 20rpx!important;
    background: #E5F1FF;
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #0087E0;
    line-height: 34rpx;
}

button {
    padding: 0;
    margin: 0;
}

.my-in-list {
    padding: 20rpx 0;
}

.my-in-list:last-child .my-in-cont {
    border-bottom: 0;
}

.my-in-title {
    margin-bottom: 16rpx;
    font-size: 36rpx;
    color: #333;
}

.my-in-cont {
    display: flex;
    justify-content: space-between;
    text-align: center;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #EDEDED;
}

.my-in-cont-item image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
}

.my-cont-tit {
    font-size: 26rpx;
    color: #333;
}

.my-cont-num {
    margin-top: 10rpx;
    font-size: 22rpx;
    color: #999;
}

button {
    background: #fff;
    border-color: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
}

button::after {
    border: none;
}

button:hover {
    background: #fff;
}

.upload_pic {
    display: inline-block;
    width: 150rpx;
    height: 150rpx;
    vertical-align: top;
    margin-left: 20rpx;
    margin-top: 20rpx;
    position: relative;
}

.form-group {
    margin-bottom: 20rpx;
    overflow: hidden;
    position: relative;
}

.form-group-money {
    position: relative;
    float: right;
    width: 20%;
    margin-top: 15rpx;
}

.form-group-money text {
    font-size: 25rpx;
    color: #ff582b;
    position: absolute;
    top: 15rpx;
    left: 20rpx;
}