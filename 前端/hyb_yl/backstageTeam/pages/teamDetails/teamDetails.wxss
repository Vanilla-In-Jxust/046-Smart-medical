.bg {
    height: 320rpx;
    padding: 23rpx;
    background: #0187E0;
    color: #fff;
}

.expert-bg {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.expert-icon {
    width: 120rpx;
    height: 120rpx;
    margin-right: 26rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
}

.expert-ri {
    width: 550rpx;
}

.expert-one {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.expert-tit {
    display: flex;
    align-items: flex-end;
    font-size: 30rpx;
}

.expert-tit text {
    font-size: 22rpx;
}

.expert-ewm {
    width: 32rpx;
    height: 32rpx;
}

.expert-doc {
    margin-top: 20rpx;
    font-size: 26rpx;
}

.expert-tip {
    line-height: 38rpx;
    margin-top: 17rpx;
    margin-bottom: 32rpx;
    font-size: 24rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.team-sc {
    display: flex;
    justify-content: flex-start;
    margin: 20rpx 0;
}

.team-sc-tit {
    width: 100rpx;
    font-size: 26rpx;
    margin-top: 8rpx;
}

.team-sc-item view {
    font-size: 26rpx;
    color: #0187E0;
    padding: 8rpx 18rpx;
    border-radius: 25rpx;
    background: #fff;
    margin: 0 25rpx 20rpx 0;
}

.user-infor {
    display: flex;
    align-items: center;
    width: 662rpx;
    padding: 30rpx 20rpx;
    margin: 24rpx 24rpx 0 24rpx;
    background: #fff;
    border-radius: 30rpx;
}

.user-infor image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 2rpx solid #0187E0;
    margin-right: 24rpx;
}

.user-tit {
    display: flex;
    align-items: center;
}

.user-name {
    display: flex;
    align-items: flex-end;
    font-size: 30rpx;
}

.user-name view {
    margin-left: 12rpx;
    font-size: 22rpx;
    color: #333;
}

.user-label {
    padding: 2rpx 10rpx;
    font-size: 22rpx;
    color: #fff;
    background: #0187E0;
    border-radius: 6rpx;
    margin-right: 24rpx;
}

.user-doc {
    margin-top: 18rpx;
    font-size: 26rpx;
    color: #666;
}

.team-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 22rpx 24rpx;
}

.team-list-item {
    position: relative;
    width: 347rpx;
    margin-bottom: 22rpx;
}

.team-t {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin-top: 6rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
}

.team-t image {
    width: 85rpx;
    height: 85rpx;
    margin-right: 11rpx;
}

.canvas {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 9999;
}

.opera {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #fff;
    z-index: 9999;
    transform: translate3d(0,100%,0);
    transition: all .3s cubic-bezier(.25,.5,.5,.9);
}

.share-mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    z-index: 9998;
}