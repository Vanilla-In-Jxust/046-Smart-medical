page {
    background-color: #f2f3f7;
}

.search_patient {
    height: 114rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
}

.search_view {
    height: 60rpx;
    width: 690rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    background-color: #f5f5f5;
}

.serach_img {
    height: 40rpx;
    width: 40rpx;
    margin: 0 25rpx;
}

.input {
    flex: 1;
}

.input {
    flex: 1;
    height: 100%;
    color: #333;
    font-size: 28rpx;
}

.patient_list_group {
    height: 104rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
}

.change_img {
    height: 50rpx;
    width: 50rpx;
    margin: 20rpx 20rpx 20rpx 40rpx;
}

.patient_list_group_name_view {
    display: flex;
    align-items: center;
    height: 100%;
    flex: 1;
}

.patient_list_group_name_left {
    height: 50rpx;
    width: 50rpx;
}

.patient_list_person {
    display: flex;
    align-items: center;
    height: 140rpx;
    background-color: #fff;
}

.patient_head_img {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.patient_list_group_name {
    flex: 1;
}

.patient_list_person_name {
    border-top: 1rpx solid #f0f0f0;
    line-height: 140rpx;
}

.next_btn_view {
    height: 120rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.next_btn {
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-image: linear-gradient(to right,#7587e6 0%,#3b4ca9 100%);
    border-radius: 40rpx;
}

.mg_left {
    margin-left: 10rpx;
}

.remarkName {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}