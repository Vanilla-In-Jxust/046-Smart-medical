<view class="fixed_top" id="mjltest">
    <view class="message">
        <view class="messageImgBox">
            <image class="messageImg" mode="aspectFill" src="{{contactList[0].patientSimpleVo.userIcon?contactList[0].patientSimpleVo.userIcon:'/assets/images/head.png'}}"></image>
        </view>
        <view class="messageTextBox">
            <view class="messageText1">{{contactList[0].patientSimpleVo.name}}</view>
            <view class="messageText2">
                <image class="messageText2Img" src="{{item.patientSimpleVo.nmGender?'/assets/images/nva.png':'/assets/images/nana.png'}}"></image>
            </view>
            <view class="messageText3" wx:if="{{contactList[0].patientSimpleVo.age}}">{{contactList[0].patientSimpleVo.age}}岁</view>
        </view>
        <view class="messageRught">
            <image bindtap="lookPaint" class="messageRughtImg {{show?'':'messageRughtImg_margin'}}" src="/assets/images/setting.png"></image>
            <view bindtap="Clickshow1" class="messageText2Img1" wx:if="{{show}}">
        问题查看
      </view>
        </view>
    </view>
    <view class="ImageText" wx:if="{{hide}}">
        <scroll-view scrollY class="font_si16 font_co333 public_white quest_view">
      {{contactList[0].dpMedOrderVo.msgTxt}}
    </scroll-view>
        <view class="scroll_box">
            <scroll-view scrollX class="quest_img_view public_white" wx:if="{{contactList[0].dpMedOrderVo.msgPicSmall.length>0}}">
                <image catchtap="previewImage" class="quest_img" data-imgindex="{{index}}" mode="aspectFill" src="{{item}}" wx:for="{{contactList[0].dpMedOrderVo.msgPicSmall}}" wx:key="{{ index }}"></image>
            </scroll-view>
        </view>
        <view class="prompt">
            <text>服务时间：{{contactList[0].dpMedOrderVo.sessionDateBegin}}</text>
            <view bindtap="Clickshow" class="up_view">
                <view class="font_si14 font_co3b">收起</view>
            </view>
        </view>
    </view>
</view>
<view style="height: {{text_height}}px;" wx:if="{{!serviceFlag}}"></view>
<view style="height: 120rpx;" wx:if="{{serviceFlag}}"></view>
<scroll-view scrollY bindscrolltoupper="scrolltoupper" class="font_si12 font_co999 quest_time" scrollTop="{{scrollTop}}" style="height: {{scroll_height}}px">
    <view class="dialog_box">
        <view wx:for="{{oppositeList}}" wx:key="{{ index }}">
            <view class="opposite" wx:if="{{item.from==1}}">
                <text class="font_si12 font_co3b opposite_time" style="color: #3b4ca9;" wx:if="{{item.parting==1}}">以下是最新消息</text>
                <text class="font_si12 font_co999 opposite_time">{{item.ctime}}</text>
                <view class="opposite_in">
                    <view class="opposite_img_view">
                        <image class="opposite_img" mode="aspectFill" src="{{contactList[0].patientSimpleVo.userIcon?contactList[0].patientSimpleVo.userIcon:'/assets/images/head.png'}}"></image>
                    </view>
                    <text bindtap="toPlay" class="video_text_left font_si14 public_white font_co333" data-index="{{index}}" data-src="{{item.msg}}" wx:if="{{item.msgType=='SINGLE_VIDEO'}}">{{item.playFlag?'播放中...':item.duration+'"'}}<text class="opposite_text"></text>
                    </text>
                    <text class="opposite_content_text font_si14 public_white font_co333" wx:if="{{item.msgType=='SINGLE_TEXT'}}">{{item.msg}}<text class="opposite_text"></text>
                    </text>
                    <image catchtap="bigImage" class="own_img_img" data-bigimg="{{item.bigImg}}" mode="widthFix" src="{{item.msg}}" style="width: 220rpx;" wx:if="{{item.msgType=='SINGLE_IMAGE'}}"></image>
                </view>
            </view>
            <view class="opposite_own" wx:else>
                <text class="font_si12 font_co999 opposite_time">{{item.ctime}}</text>
                <view class="opposite_in opposite_in_own">
                    <text class="own_content_text font_si14 public_bgc3b font_cofff" wx:if="{{item.msgType=='SINGLE_TEXT'}}">{{item.msg}}<text class="opposite_own_text public_bgc3b"></text>
                    </text>
                    <image catchtap="bigImage" class="own_img" data-bigimg="{{item.bigImg}}" mode="widthFix" src="{{item.msg}}" style="width: 220rpx;" wx:if="{{item.msgType=='SINGLE_IMAGE'}}"></image>
                    <text bindtap="toPlay" class="video_text public_bgc3b font_cofff font_si14" data-backmsg="{{item.seqId}}" data-index="{{index}}" data-src="{{item.msg}}" wx:if="{{item.msgType=='SINGLE_VIDEO'}}">{{item.playFlag?'播放中...':item.duration+'"'}}<text class="opposite_own_text public_bgc3b"></text>
                    </text>
                    <image class="opposite_img" mode="aspectFill" src="{{contactList[0].doctorIcon}}"></image>
                </view>
            </view>
        </view>
    </view>
</scroll-view>
