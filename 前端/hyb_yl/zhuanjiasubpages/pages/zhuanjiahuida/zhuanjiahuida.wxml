<view class="orderbox">
    <view class="titles">患者信息</view>
    <view class="infobox">
        <view class="infoboxgroup">
            <view>基本信息</view>
            <view>{{usedetail.names}} | {{usedetail.sex}} | {{usedetail.age}} | {{usedetail.tizhong}}kg</view>
        </view>
        <view class="infoboxgroup">
            <view>肾功能：</view>
            <view>{{usedetail.shen_index==0?'正常':'异常'}} </view>
        </view>
        <view class="infoboxgroup">
            <view>肝功能：</view>
            <view>{{usedetail.gan_index==0?'正常':'异常'}} </view>
        </view>
        <view class="infoboxgroup">
            <view>婚姻状况</view>
            <view>{{usedetail.hunyin!=='undefined'?usedetail.hunyin:''}}</view>
        </view>
    </view>
</view>
<block wx:if="{{key_words=='tijianjiedu'}}">
    <view bindtap="lookreport" class="sickitem" data-id="{{item.id}}" wx:for="{{bglist}}" wx:key="key">
        <view class="sickitem-left">
            <view class="sickiteminfo">
                <view>{{usedetail.names}}</view>
                <view>{{usedetail.sex}} {{usedetail.age}}岁</view>
            </view>
        </view>
        <view class="sickitem-center">
            <view>{{item.time}}</view>
            <view>{{item.doc.agentname}}</view>
            <view>订单编号：{{item.ordernums}}</view>
        </view>
        <view bindtap="lookreport" class="sickbtn {{item.states==0?'btn1':item.states==1?'btn2':'btn3'}}" data-id="{{item.id}}">{{item.ifjd=='1'?'已解读':'未解读'}}</view>
    </view>
</block>
<view class="orderbox doctorbox" wx:if="{{key_words=='yuanchengkaifang'}}" wx:for="{{cfdata}}" wx:for-item="items" wx:key="key">
    <view class="doctor">
        <image src="{{items.advertisement}}"></image>
        <view>{{items.z_name}}</view>
    </view>
    <view class="symptom">根据您的病情，诊断：{{items.content.text1}}</view>
    <view class="symptom">
        <view>建议用药：</view>
        <view class="yaoming">{{items.content.text2}}</view>
    </view>
    <view class="symptom">已为患者开具处方</view>
    <view class="symptom">
        <image bindtap="lookimg" data-img="{{item.sthumb}}" data-index="{{index}}" data-url="{{items.cartlist}}" src="{{item.sthumb}}" wx:for="{{items.cartlist}}" wx:key="key"></image>
    </view>
</view>
<block wx:if="{{key_words=='tuwenwenzhen'}}">
    <block wx:for="{{list}}" wx:key="key">
        <view class="ordertime">{{item.time}}</view>
        <view class="orderboxss" wx:if="{{item.role==0}}">
            <view class="mess">症状描述：{{item.content.text}}</view>
            <view class="imgbox">
                <image bindtap="previewImg" data-index="{{index}}" data-src="{{pic}}" mode="aspectFill" src="{{pic}}" wx:for="{{item.content.upload_picture_list}}" wx:for-item="pic" wx:key="index"></image>
            </view>
        </view>
        <view class="orderbox doctorbox" wx:if="{{item.role==1}}">
            <view class="doctor">
                <image src="{{item.advertisement}}"></image>
                <view>{{item.z_name}} </view>
            </view>
            <view class="symptom">{{item.content.text}}</view>
            <view class="imgbox">
                <image bindtap="previewImg" data-index="{{index}}" data-src="{{pic}}" mode="aspectFill" src="{{pic}}" wx:for="{{item.content.upload_picture_list}}" wx:for-item="pic" wx:key="p"></image>
            </view>
        </view>
    </block>
    <view class="forms">
        <view bindtap="buttonclick" class="formsimgs" wx:if="{{suc==''}}">
            <image src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/more.png?sign=25a46e7799731f30fb74ee8958035082&t=1583488929"></image>
            <text>更多</text>
        </view>
        <view bindtap="getchar" class="formsimgs" wx:if="{{detail.cfstate=='1'}}">
            <image src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/order.png?sign=cd76d7db4bdd4cc70944e3607e955df8&t=1583488982"></image>
            <text>已申请处方</text>
        </view>
        <view bindtap="getchar" class="formsimgs" wx:if="{{detail.cfstate=='0'}}">
            <image src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/order.png?sign=cd76d7db4bdd4cc70944e3607e955df8&t=1583488982"></image>
            <text>未申请处方</text>
        </view>
        <view bindtap="tabinput" class="ques" wx:if="{{oneorder.ifpay==='1'}}"> 确认接诊</view>
        <view bindtap="tabinput2" class="ques" wx:if="{{oneorder.ifpay==='2'&&oneorder.ifgb=='0'}}"> 回答问题</view>
        <view class="ques" wx:if="{{oneorder.ifpay==='2'&&oneorder.ifgb=='1'}}"> 订单已结束</view>
        <view class="ques" wx:if="{{oneorder.ifpay==='3'}}"> 订单已完成</view>
        <view class="ques" wx:if="{{oneorder.ifpay==='4'&&oneorder.ifgb=='1'}}"> 订单已结束</view>
        <view class="ques" wx:if="{{oneorder.ifpay==='7'}}"> 订单已关闭</view>
    </view>
    <form bindsubmit="submitformzw" wx:if="{{shouwtab}}">
        <view class="zhuiwen">
            <view class="zhuiwen-tit">回答 <text bindtap="closezhuiwen">×</text>
            </view>
            <view class="zhuiwen-textarea">
                <textarea name="zhuiwen" placeholder="描述时请尽量详细和准确，充分利用追问机会"></textarea>
            </view>
            <view class="sendbox">
                <view class="lists-item">
                    <view class="img" wx:for="{{upload_picture_list}}" wx:key="index">
                        <image bindtap="previewImage" class="icons" data-src="{{item}}" src="{{item}}"></image>
                        <image bindtap="clearImg" class="close" data-ind="{{index}}" src="https://696d-image-ac66k-1302520890.tcb.qcloud.la/error.png?sign=14b76ea0dccdc2b1715251cf09e99ddc&t=1594883648"></image>
                    </view>
                    <image bindtap="uploadimg" class="add" mode="widthFix" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/chat_msg/pic.png?sign" wx:if="{{upload_picture_list.length<=2}}"></image>
                </view>
                <button formType="submit" size="mini">发送</button>
            </view>
        </view>
    </form>
</block>
