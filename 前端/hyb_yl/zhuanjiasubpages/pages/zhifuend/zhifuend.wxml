<view class="orderbox">
    <view class="titles">患者信息</view>
    <view class="infobox">
        <view class="infoboxgroup">
            <view>基本信息</view>
            <view>{{usedetail.names}} | {{usedetail.sex}} | {{usedetail.age}} | {{usedetail.tizhong}}kg</view>
        </view>
        <view class="infoboxgroup">
            <view>肝功能</view>
            <view>{{usedetail.gan_index==0?'肝功能正常':'肝功能异常'}} </view>
        </view>
        <view class="infoboxgroup">
            <view>肾功能</view>
            <view>{{usedetail.shen_index==0?'肾功能正常':'肾功能异常'}} </view>
        </view>
        <view class="infoboxgroup">
            <view>婚姻状况</view>
            <view>{{usedetail.hunyin}}</view>
        </view>
    </view>
</view>
<block wx:if="{{key_words=='tijianjiedu'}}">
    <view bindtap="lookreport" class="sickitem" data-id="{{item.id}}" wx:for="{{bglist}}" wx:key="key">
        <view class="sickitem-left">
            <image src="{{u_thumb}}"></image>
            <view class="sickiteminfo">
                <view>{{usedetail.names}}</view>
                <view>{{usedetail.sex}} {{usedetail.age}}岁</view>
            </view>
        </view>
        <view class="sickitem-center">
            <view>{{item.time}}</view>
            <view>{{item.doc.agentname}}</view>
            <view>订单编号：{{item.ordernums}}</view>
        </view>
        <view bindtap="lookreport" class="sickbtn {{item.states==0?'btn1':item.states==1?'btn2':'btn3'}}" data-id="{{item.id}}">{{item.ifjd=='1'?'已解读':'未解读'}}</view>
    </view>
</block>
<view class="orderbox doctorbox" wx:for="{{cfdata}}" wx:key="key">
    <view class="doctor">
        <image src="{{item.advertisement}}"></image>
        <view>{{item.z_name}}</view>
    </view>
    <view class="symptom">根据您的病情，诊断：{{item.content.text1}}</view>
    <view class="symptom">
        <view>建议用药：</view>
        <view class="yaoming">{{item.content.text2}}</view>
    </view>
    <view class="symptom">已为您开具处方，若需要够买处方中的药品，请点击下方按钮购买</view>
    <view class="symptom">
        <image bindtap="lookimg" data-img="{{orlist.sthumb}}" src="{{orlist.sthumb}}" wx:for="{{item.cartlist}}" wx:for-item="orlist" wx:key="m"></image>
    </view>
    <view class="buttons">
        <view bindtap="lookdetail" data-id="{{item.id}}" data-orderstatus="{{item.orderStatus}}" wx:if="{{item.orderStatus=='0'}}">申请续方</view>
        <view bindtap="atbuy" data-c_id="{{item.cid}}" data-cartlist="{{item.cartlist}}" data-id="{{item.id}}" data-j_id="{{item.j_id}}" data-key_words="{{item.key_words}}" data-orders="{{item.orderNo}}" data-text="{{item.content.text}}" data-totals="{{item.totalMoney}}" data-yongyao="{{item.content.text2}}" data-zhenduan="{{item.content.text1}}" wx:if="{{item.orderStatus!=='0'}}">立即购药</view>
    </view>
</view>
<block wx:if="{{key_words=='yuanchengguahao'||key_words=='tijianjiedu'||key_words=='dianhuajizhen'||key_words=='shipinwenzhen'||key_words=='shoushukuaiyue'}}">
    <view class="orderbox" wx:if="{{key_words=='yuanchengguahao'||key_words=='shoushukuaiyue'}}">
        <view class="mess">预约时间：{{list[0].year}}</view>
    </view>
    <view class="orderbox" wx:if="{{key_words=='dianhuajizhen'||key_words=='shipinwenzhen'}}">
        <view class="mess">预约时间：{{list[0].year}} {{list[0].month_time}}</view>
    </view>
    <block wx:for="{{list}}" wx:key="key">
        <view class="ordertime">{{item.time}}</view>
        <view class="orderbox" wx:if="{{item.role=='0'}}">
            <view class="titles">第{{item.len+1}}次提问</view>
            <view class="mess">症状描述：{{item.content.text}}</view>
            <view class="imgbox">
                <image bindtap="big_img" data-img="{{pic}}" data-imglist="{{item.content.upload_picture_list}}" src="{{pic}}" style="width:200rpx;height:200rpx" wx:for="{{item.content.upload_picture_list}}" wx:for-item="pic" wx:key="p"></image>
            </view>
        </view>
        <view class="orderbox doctorbox" wx:if="{{item.role=='1'}}">
            <view class="doctor">
                <image src="{{item.advertisement}}"></image>
                <view>{{item.z_name}} 医生</view>
            </view>
            <view class="symptom">{{item.content.text}}</view>
            <view class="imgbox">
                <image bindtap="big_img" data-img="{{pic}}" data-imglist="{{item.content.upload_picture_list}}" data-index="{{index}}" data-src="{{pic}}" mode="aspectFill" src="{{pic}}" style="width:200rpx;height:200rpx;" wx:for="{{item.content.upload_picture_list}}" wx:for-item="pic" wx:key="index"></image>
            </view>
        </view>
    </block>
    <view bindtap="tuikuan" class="ifjiezhen" wx:if="{{cfdetail.ifpay=='1'}}">已通知医生接诊，医生接诊后会尽快回复你 <text>取消提问</text>
    </view>
    <view class="popboxempty" wx:if="{{popshow}}"></view>
    <view class="popbox" wx:if="{{msgmb=='yes'}}">
        <view class="ptiontit">请允许接收订阅消息</view>
        <view class="ptiontextt">为了及时的告知医生已回复你的问题，请勾选【所有】消息类型并允许</view>
        <button bindtap="ptiontitbtn" class="ptiontitbtn" formType="submit" hoverClass="none">我知道了</button>
    </view>
    <view class="forms">
        <view bindtap="buttonclick" class="formsimgs" data-id="{{id}}" data-open="{{open}}">
            <image src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/more.png?sign=25a46e7799731f30fb74ee8958035082&t=1583488929"></image>
            <text>更多</text>
        </view>
        <view bindtap="sqchufang" class="formsimgs">
            <image src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/order.png?sign=cd76d7db4bdd4cc70944e3607e955df8&t=1583488982"></image>
            <text>申请处方</text>
        </view>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifgb=='1'&&ifpay==1}}">未接诊</view>
        <view bindtap="tabtwoinput" class="ques" data-id="{{list[0].id}}" wx:if="{{ifgb=='1'&&ifpay==0}}">再次提问</view>
        <view bindtap="tabinputpay" class="ques" data-id="{{id}}" wx:if="{{ifgb=='0'&&ifpay==0&&list[0].money!=='0.00'}}">支付订单</view>
        <view bindtap="tuikuan" class="ques" data-id="{{id}}" wx:if="{{ifgb=='0'&&ifpay==0&&list[0].money=='0.00'}}">取消订单</view>
        <view class="ques" wx:if="{{ifpay=='1'&&ifgb=='0'}}">待接诊</view>
        <block wx:if="{{addnum!==0}}">
            <view bindtap="tabinput" class="ques" wx:if="{{ifpay=='2'}}">回复医生(可继续追问{{addnum}}次)</view>
        </block>
        <block wx:if="{{addnum==0}}">
            <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='2'}}">再次提问</view>
        </block>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='3'}}">再次提问</view>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='4'}}">再次提问</view>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='6'}}">再次提问</view>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='7'}}">再次提问</view>
        <view bindtap="tabtwoinput" class="ques" wx:if="{{ifpay=='8'}}">已取消再次提问</view>
    </view>
    <block wx:if="{{ifpay=='3'}}">
        <view class="orderbox">订单已完成</view>
        <view bindtap="tuikuan" class="ifjiezhen" data-id="{{id}}" wx:if="{{money!=='0.00'}}">对订单有疑问？ <text>申请退款</text>
        </view>
    </block>
    <view class="orderbox" wx:if="{{ifpay=='2'&&ifgb!=='1'}}">专家已接诊</view>
    <view class="orderbox" wx:if="{{ifpay!=='7'&&ifgb!=='1'}}">问题将在<text>{{dumiao}}</text>后自动结束，如需追问，请及时提交</view>
    <view class="orderbox" wx:if="{{ifgb=='1'&&ifpay==0}}">未支付,订单已超时</view>
    <view class="orderbox" wx:if="{{ifgb=='1'&&ifpay==1}}">已支付，未接诊订单已超时</view>
    <form bindsubmit="submitformzw" wx:if="{{shouwtab}}">
        <view class="zhuiwen">
            <view class="zhuiwen-tit">回答 <text bindtap="closezhuiwen">×</text>
            </view>
            <view class="zhuiwen-textarea">
                <textarea name="zhuiwen" placeholder="描述时请尽量详细和准确，充分利用追问机会"></textarea>
            </view>
            <view class="sendbox">
                <view class="lists-item">
                    <view class="img" wx:for="{{upload_picture_list}}" wx:key="key">
                        <image bindtap="previewImage" class="icons" data-src="{{item}}" src="{{item}}"></image>
                        <image bindtap="clearImg" class="close" data-ind="{{index}}" src="https://696d-image-ac66k-1302520890.tcb.qcloud.la/error.png?sign=b40b7db514e42b2a8603369158f5149d&t=1595229703"></image>
                    </view>
                    <image bindtap="uploadimg" class="add" mode="widthFix" src="https://6a69-jin5201-a4503e-1257013711.tcb.qcloud.la/chat_msg/pic.png?sign" wx:if="{{upload_picture_list.length<=2}}"></image>
                </view>
                <button formType="submit" size="mini">发送</button>
            </view>
        </view>
    </form>
</block>
