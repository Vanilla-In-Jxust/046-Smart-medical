.frame {
    padding: 20rpx;
    box-sizing: border-box;
}

.notice {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.img {
    width: 100%;
    height: 300rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.satisfied {
    position: absolute;
    top: 15rpx;
    left: 15rpx;
    padding: 0 20rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #fff;
    background: #3b4ca9;
    border-radius: 50rpx;
}

.purchase {
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    padding: 0 20rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #fff;
    background: #3b4ca9;
    border-radius: 50rpx;
}

.silhouette {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70rpx;
    background: #000;
    opacity: 0.5;
}

.title {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    line-height: 70rpx;
    color: #fff;
}

.sign {
    color: red;
    font-size: 26rpx;
}

.price {
    color: red;
    font-size: 40rpx;
}

.money {
    background: #fff;
    padding-left: 30rpx;
    line-height: 70rpx;
}