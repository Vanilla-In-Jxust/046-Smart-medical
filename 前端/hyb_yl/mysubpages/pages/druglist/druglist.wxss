page {
    width: 100%;
    height: 100%;
    background: #f3f3f3;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.top {
    padding: 10rpx 30rpx;
    display: flex;
    justify-content: flex-end;
    background: #0088de;
    font-size: 26rpx;
    color: white;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
}

.shopContent {
    margin-top: 70rpx;
}

.firmbox {
    padding: 0rpx 20rpx;
    display: flex;
    flex-direction: column;
}

.firmnameBox {
    display: flex;
    align-items: center;
    padding: 20rpx 0rpx 15rpx;
}

.select {
    width: 35rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.shopList {
    display: flex;
    align-items: center;
    padding: 20rpx 20rpx;
    margin-bottom: 20rpx;
    background: #FFFFFF;
}

.shopImage {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    box-shadow: 0px 0px 10px #f3f3f3;
}

.productDetails {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 20rpx;
    height: 180rpx;
}

.numbox {
    border: 1rpx solid #f5f5f5;
    width: 150rpx;
}

.inputbox {
    width: 100%;
    height: 100%;
    text-align: center;
}

.footbox {
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #f5f5f5;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #FFFFFF;
    z-index: 100;
}

.account {
    padding: 18rpx 30rpx;
    border-radius: 40rpx;
    background-color: red;
    color: #FFFFFF;
    text-align: center;
    font-size: 26rpx;
}

.del {
    border: 1rpx solid #8e8e8e;
    color: #222;
    padding: 15rpx 30rpx;
    border-radius: 40rpx;
    text-align: center;
    font-size: 26rpx;
}

.counse_no {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 40rpx;
    margin-top: 200rpx;
}

.face {
    width: 500rpx;
    height: 300rpx;
    margin-bottom: 20rpx;
}

.algin {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.code {
    width: 300rpx;
    height: 80rpx;
    background-image: linear-gradient(to right,#6699ff,#3b4ca9);
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    border-radius: 40rpx;
}

.text-deal {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}