.swiper-tab {
    display: flex;
    align-items: center;
    height: 88rpx;
    background-color: #fff;
    justify-content: space-between;
    padding: 0 24rpx 0 34rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1rpx solid #f0f0f0;
}

.swiper-tab-right {
    flex: 1;
    display: flex;
}

.swiper-tab-list {
    font-size: 28rpx;
    display: inline-block;
    color: #333;
    padding: 15rpx 20rpx;
    margin-right: 10rpx;
    background-color: #f2f3f7;
    border-radius: 30rpx;
}

.per {
    display: flex;
    flex-direction: column;
    padding: 25rpx 0;
}

.on {
    color: #fff;
    background-color: #3b4ca9;
}

.swiper-box {
    display: block;
    width: 100%;
    height: 100%;
    padding-top: 88rpx;
}

scroll-view {
    height: 100vh;
}

.comm_user {
    justify-content: space-between;
}

.circle {
    width: 60rpx;
    height: 60rpx;
    margin-right: 14rpx;
}

.comment {
    display: flex;
    flex-direction: column;
    padding-top: 32rpx;
    padding-bottom: 28rpx;
}

.comment .comm_person {
    margin-right: 12rpx;
}

.cimm_start {
    width: 24rpx;
    height: 24rpx;
    margin-right: 6rpx;
}

.comm_content {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    line-height: 20px;
}

.comm_img {
    width: 160rpx;
    height: 160rpx;
    margin-right: 10rpx;
}

.commBoo {
    padding-top: 88rpx;
    height: 500rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading_view {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}

.loading {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
}

.more_text {
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}