page {
    width: 100%;
    height: 100%;
    background: #f7f7f5;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.oval {
    padding: 20rpx;
    background: white;
    margin-bottom: 20rpx;
}

.headbox {
    display: flex;
    align-items: center;
}

.headImg {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.headImg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.headname {
    margin-left: 10rpx;
    margin-right: 15rpx;
    font-size: 30rpx;
}

.evaluation {
    color: white;
    background: red;
    font-size: 24rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.bigbox {
    padding: 20rpx;
    height: auto;
    background: white;
    box-shadow: 0 0 20rpx #eaeaea;
    margin-top: 25rpx;
    border-radius: 10rpx;
}

.evalTime {
    display: flex;
    justify-content: space-between;
}

.imgbox {
    display: flex;
}

.startImg {
    width: 30rpx;
    height: 30rpx;
}

.timefont {
    font-size: 24rpx;
    color: #8d8d8d;
}

.evalcont {
    margin-top: 20rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.evalcont_no {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
}

.uploadbox {
    display: flex;
    justify-content: flex-end;
}

.upload {
    font-size: 28rpx;
    padding-top: 15rpx;
}

.evalimgbox {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.imgcss {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.imgcss image {
    width: 100%;
    height: 100%;
}

.buygoods {
    font-size: 28rpx;
    color: #ababab;
    line-height: 56rpx;
}

.noshopeval {
    text-align: center;
    background: white;
    padding-bottom: 100rpx;
}

.noshopeval image {
    width: 400rpx;
    height: 200rpx;
    margin-top: 100rpx;
    margin-bottom: 20rpx;
}

.foot {
    height: 150rpx;
}