page {
    width: 100%;
    background: #fff;
    padding: 25rpx;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.tab {
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #F9F9F9;
    background: #fff;
    padding: 0rpx 25rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 200;
}

.tab .son {
    width: 15%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}

.tab .active {
    border-bottom: 4rpx solid #0087E0;
    color: #0087E0;
}

.sickbox {
    width: 100%;
    margin-top: 95rpx;
}

.doctmes {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 25rpx;
}

.doctmes-left {
    display: inline-flex;
    align-items: center;
    font-size: 30rpx;
    color: #949494;
}

.doctmes-left image {
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
}

.doctmes-left text {
    margin-left: 20rpx;
}

.doctmes-right {
    font-size: 28rpx;
    color: #F7B912;
}

.sickitem {
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 26rpx;
    width: 100%;
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    overflow: hidden;
    box-shadow: 0 0 5rpx 5rpx #FAFAFA;
}

.sickitem-left {
    width: 32%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
}

.sickitem-left image {
    width: 70rpx;
    height: 70rpx;
}

.sickiteminfo {
    width: 55%;
}

.sickiteminfo view:first-child {
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sickiteminfo view:last-child {
    font-size: 26rpx;
    color: #A7A7A7;
    margin-top: 8rpx;
}

.sickitem-center {
    width: 65%;
    padding: 0 20rpx;
    border-left: 1rpx solid #F8F8F8;
    margin: 20rpx 0;
}

.sickitem-center view {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sickitem-center view:first-child {
    font-size: 30rpx;
    color: #333;
}

.sickitem-center view:nth-child(2) {
    font-size: 24rpx;
    color: #8C8C8C;
    margin: 8rpx 0;
}

.sickitem-center view:last-child {
    font-size: 22rpx;
    color: #8C8C8C;
}

.sickbtn {
    width: 66rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    padding: 10rpx;
}

view.btn1 {
    background: #2876E6;
}

view.btn2 {
    background: #E67428;
}

view.btn3 {
    background: #8E6EF9;
}

.nonelist {
    text-align: center;
    padding-top: 200rpx;
}

.nonelist image {
    margin-bottom: 20rpx;
    width: 510rpx;
    height: 230rpx;
}