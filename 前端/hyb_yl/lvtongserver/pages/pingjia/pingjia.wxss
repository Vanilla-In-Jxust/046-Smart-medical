page {
    width: 100%;
    height: 100%;
}

view {
    width: 100%;
}

.err {
    background: #fee1d3;
    color: #fd6846;
    text-align: center;
    padding: 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.doctormes {
    background: #fff;
    display: flex;
    padding: 25rpx;
}

.doc-img {
    width: 130rpx;
    height: 170rpx;
    border-radius: 10rpx;
}

.doc-img image {
    width: 100%;
    height: 100%;
}

.doc-mes {
    flex: 1;
    padding-left: 60rpx;
}

.doc-name {
    margin-top: 15rpx;
}

.yijianbox {
    background: #fff;
    padding: 25rpx 0rpx 25rpx 25rpx;
    margin-top: 20rpx;
}

.yijianbox textarea {
    width: 100%;
    height: 200rpx;
    font-size: 28rpx;
    color: #4C4C4C;
    margin-top: 20rpx;
    padding-top: 25rpx;
    border-top: 1rpx solid #EEEEEE;
}

.pingxing {
    padding: 35rpx 0;
}

.pingxing image {
    width: 45rpx;
    height: 45rpx;
    margin-right: 35rpx;
}

.pingxing text {
    margin-left: 25rpx;
}

button::after {
    border: none;
}

button {
    width: 90%;
    text-align: center;
    padding: 0;
    margin: 50rpx auto;
    line-height: 85rpx;
    background: #47D1BA;
    color: #fff;
    font-size: 30rpx;
}

.errbtn {
    background: #B9B9B9;
}