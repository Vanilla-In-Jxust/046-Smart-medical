.wrap {
    width: 100%;
    height: 180rpx;
    float: left;
    line-height: 180rpx;
    text-indent: 30rpx;
    font-size: 36rpx;
    color: #999;
    border-bottom: #e0e0e0 1rpx solid;
}

.wrap>text {
    font-size: 60rpx;
    color: #333;
    float: right;
    margin-right: 30rpx;
}

.wrap1 {
    width: 100%;
    height: 650rpx;
    float: left;
    border-bottom: #e0e0e0 1rpx solid;
}

.wrap1-text {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    color: #999;
    text-indent: 30rpx;
    float: left;
    font-size: 28rpx;
    margin-top: 50rpx;
}

.wrap1-text>text {
    float: right;
    margin-right: 30rpx;
    color: #333;
}