page {
    background-color: #f2f3f7;
}

.search_patient {
    height: 114rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
}

.search_view {
    height: 60rpx;
    width: 690rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    background-color: #f5f5f5;
}

.serach_img {
    height: 40rpx;
    width: 40rpx;
    margin: 0 25rpx;
}

.input {
    flex: 1;
}

.input {
    flex: 1;
    height: 100%;
    color: #333;
    font-size: 28rpx;
}

.scroll_view {
    max-height: 90vh;
    background-color: #fff;
}

.classify_list {
    height: 216rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #f0f0f0;
    margin: 0 30rpx;
    box-sizing: border-box;
}

.classify_list_left {
    flex: 1;
}

.classify_list_left_top {
    height: 100rpx;
}

.classify_list_left_bottom {
    margin-top: 14rpx;
}

.classify_list_img_view {
    margin-left: 40rpx;
    position: relative;
}

.classify_list_img_view_absolute {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
}

.vd_img {
    width: 70rpx;
    height: 70rpx;
}

.classify_list_img {
    width: 208rpx;
    height: 156rpx;
    border-radius: 16rpx;
}

.classify_list_time {
    display: inline-block;
    margin: 0 20rpx;
}