</view>
<view class="load">
    <view class="logisit" wx:for="{{list}}" wx:key="key">
        <view class="list">
            <image class="list_img_tab1" src="https://7465-text-b8aafb-1258438742.tcb.qcloud.la/img/签收.png?sign=9bdd2a7ad2c88b97382f156227c20ff1&t=1550307304" wx:if="{{item.id==0&&list.length>1}}"></image>
            <image class="list_img" src="https://7465-text-b8aafb-1258438742.tcb.qcloud.la/img/no.png?sign=59f3aa8dbabb7a6ff971a3131e31f1be&t=1550307479" wx:if="{{item.id==0&&list.length==1}}"></image>
            <image class="list_imgs" src="https://7465-text-b8aafb-1258438742.tcb.qcloud.la/img/no.png?sign=59f3aa8dbabb7a6ff971a3131e31f1be&t=1550307479" wx:if="{{item.id>0&&item.id<list.length-1}}"></image>
            <image class="list_img" src="https://7465-text-b8aafb-1258438742.tcb.qcloud.la/img/start.png?sign=cdf5a24b03d7a1ee9fec96d30f782be2&t=1550307644" wx:if="{{item.id==list.length-1}}"></image>
            <view class="list_name_page">
                <view class="list_name">{{item.context}}</view>
            </view>
            <view class="list_dates_page">{{item.time}}</view>
        </view>
        <view class="writes"></view>
    </view>
</view>
