    <view class="top">
        <view class="drupmes-img">
            <image src="https://img1.dxycdn.com/2019/0125/653/3325176099507743447-22.png"></image>
        </view>
        <view class="drupmesbox">
            <view class="son" wx:if="{{orderstatus=='0'}}">待发货</view>
            <view class="son" wx:if="{{orderstatus=='1'}}">物流配送中</view>
