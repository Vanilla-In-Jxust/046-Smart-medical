            <view class="subtit">{{type==1?num:'暂无运单信息'}}</view>
        </view>
    </view>
    <view class="tips">
        <view class="image">
            <image src="https://7465-text-b8aafb-1258438742.tcb.qcloud.la/img/gantanhao.png?sign=04901d7aa53d144f47bf65f4d7ce3d05&t=1550225732"></image>
        </view>
