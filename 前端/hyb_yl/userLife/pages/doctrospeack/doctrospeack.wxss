.tab {
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #e1e1e1;
    background: #fff;
    align-items: center;
}

.tab .son {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    flex: 1;
    border-bottom-width: 4rpx;
}

.tab .son .active {
    border-bottom: 4rpx solid #00b7ee;
    color: #00b7ee;
}

.tabtext {
    line-height: 88rpx;
}

.nonelist {
    text-align: center;
    padding-top: 200rpx;
}

.nonelist image {
    margin-bottom: 20rpx;
    width: 510rpx;
    height: 230rpx;
}

.docSpeack_box {
    background: white;
    padding: 0rpx 24rpx;
}

.develop {
    background: white;
    padding: 0rpx 24rpx;
}

.devalBox {
    display: flex;
    flex-direction: column;
    padding: 25rpx 0rpx;
    border-bottom: 1rpx solid #eaeaea;
}

.devalBox:last-child {
    border-bottom: none;
}

.devalist {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.deval_left {
    width: 75rpx;
    text-align: center;
}

.userImg {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    background: red;
}

.deval_right {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
}

.deval_name {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 3rpx;
}

.deval_hospital {
    color: #999;
    font-size: 26rpx;
    margin-bottom: 3rpx;
}

.hjcont {
    font-size: 26rpx;
    color: #333;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.deval_contbox {
    padding-left: 95rpx;
}

.deval_cont {
    background: #f0f0f0;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.devalIMG {
    width: 140rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 15rpx;
}

.devalIMG image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

.devalTitle {
    flex: 1;
    font-size: 24rpx;
    color: #333;
    padding-left: 20rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}