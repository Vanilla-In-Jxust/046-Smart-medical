.package_item_box {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-around;
    background: #fff;
}

view {
    box-sizing: border-box;
}

.package_item_box:last-child {
    border: none;
}

.package_img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.package_right {
    width: 65%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.title {
    font-size: 26rpx;
    color: #494949;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.describle {
    padding-top: 2rpx;
    font-size: 24rpx;
    color: #A3A3A3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.number {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
}

.price {
    color: #ea5504;
    font-size: 24rpx;
}

.big {
    font-size: 28rpx;
}

.people {
    color: #808080;
    font-size: 24rpx;
}

.index__header {
    height: 90rpx;
    padding: 0 30rpx;
}

.index__header__city {
    color: #666;
    padding: 15rpx 0;
}

.index__header__city image {
    width: 22rpx;
    height: 14rpx;
    margin-left: 7rpx;
    margin-bottom: 4rpx;
}

.index__content {
    height: 210rpx;
    padding: 40rpx 20rpx 0;
    position: relative;
    z-index: 1;
    overflow: visible;
    background: #fff;
}

.index__content__fir {
    position: absolute;
    top: -30rpx;
    height: 160rpx;
    left: 40rpx;
    right: 40rpx;
    border-radius: 10rpx;
    z-index: 2;
    box-shadow: 0rpx 2rpx 20rpx rgba(0,0,0,0.12);
    display: flex;
    background: #fff;
}

.index__content__fir__child {
    margin: 49rpx 0 49rpx 42rpx;
    display: flex;
    width: 50%;
}

_ .index__content__fir__child:first-child {
    border-right: 1rpx solid #e3e3e3;
}

.index__content__fir__child__img {
    width: 62rpx;
    height: 62rpx;
    margin-right: 19rpx;
}

.index__content__fir__child__title {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 11rpx;
}

.index__content__fir__child__describle {
    font-size: 22rpx;
    color: #808080;
}

.index__content__sec {
    height: 180rpx;
    width: 100%;
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    overflow-x: auto;
    justify-content: space-between;
}

.index__content__sec__img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
}

.index__package__title {
    height: 78rpx;
    padding: 0rpx 20rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}

.index__package__title__left {
    font-size: 32rpx;
    line-height: 78rpx;
    display: flex;
    align-items: center;
}

.index__package__title__left::before {
    content: '';
    display: block;
    width: 6rpx;
    height: 34rpx;
    background: #93c47d;
    margin-right: 20rpx;
}

.index__package__title__right {
    font-size: 26rpx;
    line-height: 26rpx;
    padding: 26rpx 0;
    color: #999;
}

.index__package__title__right image {
    width: 14rpx;
    height: 25rpx;
    margin-left: 9rpx;
    vertical-align: bottom;
}

.index__swiper {
    display: block;
    width: 100%;
    height: 175px!important;
    position: relative;
    z-index: 1;
}

.index__swiper image {
    display: block;
    width: 100%;
    height: 175px;
}

.index__swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
    padding-bottom: 30rpx;
}

.rule {
    padding: 30rpx;
    color: #999;
    font-size: 28rpx;
    text-align: center;
}

.tabbox {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 26rpx;
    color: #999;
}

.label_box {
    display: flex;
    align-items: center;
}

.label {
    border: 2rpx solid #93c47d;
    padding: 0rpx 10rpx;
    border-radius: 40rpx;
    font-size: 20rpx;
    margin-right: 10rpx;
    color: #93c47d;
    white-space: nowrap;
}

.yuanjia {
    color: #999;
    font-size: 20rpx;
    text-decoration: line-through;
}