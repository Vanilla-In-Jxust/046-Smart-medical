page {
    position: relative;
    height: 100%;
    background: #FFFFFF;
}

.current-city {
    width: 750rpx;
}

.city-letter {
    width: 120rpx;
    position: fixed;
    top: 50%;
    right: 0rpx;
    transform: translateY(-50%);
    z-index: 100;
}

.city-letter-con {
    display: block;
    width: 65rpx;
    height: 40rpx;
    font-size: 26rpx;
    text-align: center;
    color: #FC6979;
}

.bg-color {
    width: 100%;
    height: 66rpx;
    line-height: 66rpx;
    font-size: 28rpx;
    color: #747474;
}

text {
    margin: 8rpx 30rpx 8rpx 30rpx;
}

.city-con {
    font-size: 26rpx;
    color: #ADADAD;
}

.city-border {
    display: inline-block;
    width: 186rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.city-border.hover {
    color: #FF5737;
    background: #FFEFEB;
    border-radius: 50rpx;
}

.city-border.hoverre {
    color: #FC97A5;
    background: #FFF3F5;
    border-radius: 50rpx;
}

.addclase {
    width: 100%;
    display: block;
    border: none;
    border-radius: 0;
    text-align: left;
}

.zimu {
    color: #FB475B;
    padding-left: 25rpx;
    position: relative;
}

.zimu::after {
    content: "";
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: #FB475B;
    position: absolute;
    top: 50%;
    left: 35rpx;
    transform: translateY(-50%);
}