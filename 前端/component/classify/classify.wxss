.commo {
    padding: 0rpx 20rpx;
    background: white;
}

.commolist {
    display: flex;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}

.medicImg {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;
    margin-top: 5rpx;
    margin-right: 15rpx;
}

.medicImg image {
    width: 100%;
    height: 100%;
}

.comm_right {
    flex: 1;
    border-bottom: 1rpx solid #f2f2f2;
    padding-bottom: 10rpx;
}

.medicname {
    font-size: 26rpx;
    color: #222;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal!important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 76rpx;
}

.medicPrice {
    color: red;
    font-size: 24rpx;
    font-weight: bold;
}

.mediclabel {
    font-size: 22rpx;
    background: red;
    color: white;
    border-radius: 5rpx;
    padding: 0rpx 5rpx;
}

.mediceval {
    font-size: 20rpx;
    color: #ccc;
    line-height: 48rpx;
    margin: 10rpx 0rpx;
    display: flex;
    justify-content: space-between;
}