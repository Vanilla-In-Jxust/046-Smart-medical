.firstbox {
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0);
    z-index: 2999;
    width: 100%;
    height: 100%;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
    z-index: 3000;
}

.maskCont {
    width: 600rpx;
    height: 760rpx;
    position: fixed;
    left: 0rpx;
    right: 0rpx;
    margin: auto;
    background: white;
    z-index: 30001;
    top: 0rpx;
    bottom: 0rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sqTitle {
    padding: 40rpx 0rpx;
    border-bottom: 1rpx solid #fdfdfd;
    color: #999;
    font-weight: bold;
}

.smallHint {
    color: #666;
    font-size: 28rpx;
    margin: 10rpx 0rpx;
}

.imgbox {
    width: 450rpx;
    height: 350rpx;
    margin-top: 30rpx;
    position: relative;
}

.imgbox image {
    width: 100%;
    height: 100%;
}

.deng {
    width: 100%;
    display: flex;
    margin-top: 40rpx;
    align-items: center;
}

.deng button {
    width: 49.5%;
    height: 100rpx;
    background: #fff;
    border: none!important;
    font-size: 40rpx;
}

.deng button::after {
    border: none!important;
}

.line {
    width: 3rpx!important;
    height: 60rpx!important;
    background: #bababa!important;
}

.deng button:last-child {
    color: #55c955;
}

.shouquan {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 80%;
    height: 420rpx;
    border-radius: 20rpx;
    background-color: #fff;
    z-index: 30001;
}

.shouquan button {
    width: 80%;
    height: 66rpx;
    line-height: 66rpx;
    margin-bottom: 20rpx;
    background-color: rgb(13,46,155);
    color: #fff;
}

.shouquan-img {
    width: 50%;
    text-align: center;
    margin: -130rpx auto 0;
}

.shouquan-con {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 80%;
    line-height: 56rpx;
    margin: 20rpx auto 0;
    text-align: center;
    color: #666;
    font-size: 30rpx;
}

.loginbox {
    display: flex;
    width: 100%;
}

.loginbox button {
    width: 50%;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    margin-bottom: 0rpx;
}

.loginbox:first-child {
    border-bottom-left-radius: 20rpx;
}

.loginbox:last-child {
    border-bottom-right-radius: 20rpx;
}